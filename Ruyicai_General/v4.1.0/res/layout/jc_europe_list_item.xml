<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dip"
    android:background="@color/white"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.1"
        android:background="@color/white">

        <TextView
            android:id="@+id/jc_europe_list_item_text_company"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.3"
            android:gravity="center"
            android:text="公司"
            android:textColor="@color/black"
            android:textSize="13dip" />

        <View
            android:layout_width="1dip"
            android:layout_height="match_parent"
            android:background="@color/zc_sfc_divider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="赔率"
                android:textColor="@color/black"
                android:textSize="13dip" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="@color/zc_sfc_divider" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="概率"
                android:textColor="@color/black"
                android:textSize="13dip" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="@color/zc_sfc_divider" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="凯利指数"
                android:textColor="@color/black"
                android:textSize="13dip" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="2dip"
        android:layout_height="match_parent"
        android:background="@color/zc_sfc_divider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.4"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/jc_europe_list_item_text_left_win"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="胜"
            android:textColor="@color/black"
            android:textSize="13dip" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="@color/zc_sfc_divider" />

        <TextView
            android:id="@+id/jc_europe_list_item_text_center_win"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="胜率"
            android:textColor="@color/black"
            android:textSize="13dip" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="@color/zc_sfc_divider" />

        <TextView
            android:id="@+id/jc_europe_list_item_text_right_win"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="凯利指数胜"
            android:textColor="@color/black"
            android:textSize="13dip" />
    </LinearLayout>

    <View
        android:layout_width="2dip"
        android:layout_height="match_parent"
        android:background="@color/zc_sfc_divider" />

    <LinearLayout android:id="@+id/jc_europe_list_item_text_left_leve_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.4"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/jc_europe_list_item_text_left_leve"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="平"
            android:textColor="@color/black"
            android:textSize="13dip" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="@color/zc_sfc_divider" />

        <TextView
            android:id="@+id/jc_europe_list_item_text_center_leve"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="平率"
            android:textColor="@color/black"
            android:textSize="13dip" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="@color/zc_sfc_divider" />

        <TextView
            android:id="@+id/jc_europe_list_item_text_right_leve"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="凯利指数平"
            android:textColor="@color/black"
            android:textSize="13dip" />
    </LinearLayout>

    <View android:id="@+id/jc_europe_list_item_text_left_leve_divider"
        android:layout_width="2dip"
        android:layout_height="match_parent"
        android:background="@color/zc_sfc_divider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.4"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/jc_europe_list_item_text_left_fail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="负"
            android:textColor="@color/black"
            android:textSize="13dip" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="@color/zc_sfc_divider" />

        <TextView
            android:id="@+id/jc_europe_list_item_text_center_fail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="负率"
            android:textColor="@color/black"
            android:textSize="13dip" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="@color/zc_sfc_divider" />

        <TextView
            android:id="@+id/jc_europe_list_item_text_right_fail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="凯利指数负"
            android:textColor="@color/black"
            android:textSize="13dip" />
    </LinearLayout>

    <View
        android:layout_width="2dip"
        android:layout_height="match_parent"
        android:background="@color/zc_sfc_divider" />

    <TextView
        android:id="@+id/jc_europe_list_item_text_give"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.4"
        android:gravity="center"
        android:text="返还率"
        android:textColor="@color/black"
        android:textSize="13dip" />

</LinearLayout>