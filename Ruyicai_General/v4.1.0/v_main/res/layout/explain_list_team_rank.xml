<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="5dip" >

        <TextView
            android:id="@+id/explain_list_item_text_one"
            android:layout_width="35dip"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|center_horizontal"
            android:text="排名"
            android:textColor="@color/black"
            android:textSize="15dip" />

        <TextView
            android:id="@+id/explain_list_item_text_two"
            android:layout_width="80dip"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|center_horizontal"
            android:text="球队"
            android:textColor="@color/black"
            android:textSize="15dip" />

        <TextView
            android:id="@+id/explain_list_item_text_team"
            android:layout_width="30dip"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|center_horizontal"
            android:text="赛"
            android:textColor="@color/black"
            android:textSize="15dip" />

        <TextView
            android:id="@+id/explain_list_item_text_three"
            android:layout_width="30dip"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|center_horizontal"
            android:text="胜"
            android:textColor="@color/black"
            android:textSize="15dip" />

        <TextView
            android:id="@+id/explain_list_item_text_four"
            android:layout_width="30dip"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|center_horizontal"
            android:text="平"
            android:textColor="@color/black"
            android:textSize="15dip" />

        <TextView
            android:id="@+id/explain_list_item_text_five"
            android:layout_width="35dip"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|center_horizontal"
            android:text="负"
            android:textColor="@color/black"
            android:textSize="15dip" />

        <TextView
            android:id="@+id/explain_list_item_text_six"
            android:layout_width="35dip"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|center_horizontal"
            android:text="净"
            android:textColor="@color/black"
            android:textSize="15dip" />

        <TextView
            android:id="@+id/explain_list_item_text_seven"
            android:layout_width="35dip"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|center_horizontal"
            android:text="积分"
            android:textColor="@color/black"
            android:textSize="15dip" />
    </LinearLayout>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="2dip"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip"
        android:background="@drawable/litt" >
    </LinearLayout>

</LinearLayout>