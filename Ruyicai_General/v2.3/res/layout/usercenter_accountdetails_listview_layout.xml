<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content">
	
	<TextView 
		android:id="@+id/user_center_account_detail_trading_date_id"
		android:textColor="@color/black"
		android:layout_alignParentLeft="true" 
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content">
	</TextView>
	
	<TextView  
		android:id="@+id/user_center_account_detail_trading_mode_id" 
		android:layout_toRightOf="@+id/user_center_account_detail_trading_date_id"
		android:textColor="@color/black"
		android:layout_marginLeft="65dip" 
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content">
	</TextView>
	
	<TextView 
		android:id="@+id/user_center_account_detail_yu_e_id" 
		android:textColor="@color/black"
		android:layout_alignParentRight="true"
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content">
	</TextView>
	
</RelativeLayout>
