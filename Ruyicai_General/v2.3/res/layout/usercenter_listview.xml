<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:background="@drawable/bg">
	<RelativeLayout android:orientation="horizontal"
		android:gravity="left" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:background="@drawable/list_top">
		<ImageView android:id="@+id/usercenter_btn_return"
			android:src="@drawable/returnselecter" android:background="#00000000"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:layout_alignParentLeft="true" android:paddingLeft="10dip"
			android:layout_centerVertical="true" />
		<TextView android:id="@+id/ruyipackage_title"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:layout_centerHorizontal="true" android:textAppearance="?android:attr/textAppearanceMedium"
			android:typeface="serif" android:text="@string/yonghuzhongxin"
			android:textColor="@color/red" android:textSize="20dip"
			android:layout_centerVertical="true" />
	</RelativeLayout>
	<ScrollView android:id="@+id/ScrollView01"
		android:layout_width="fill_parent" android:layout_height="wrap_content" android:paddingBottom="5dp">
		<LinearLayout android:orientation="vertical"
			android:layout_width="fill_parent" android:layout_height="540dp">
			<TextView android:text="@string/chaxunxinxi"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:gravity="left" android:textSize="18dip" android:textColor="@color/black"
				android:paddingLeft="30dip"></TextView>
			<ListView android:id="@+id/usercenter_listview_id"
				android:cacheColorHint="#00000000" android:layout_width="300dip"
				android:layout_height="260dip" android:background="@drawable/usercenter_bg"
				android:layout_gravity="center_horizontal">
			</ListView>
			<TextView android:text="@string/zhanghuguanli"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:gravity="left" android:textSize="18dip" android:textColor="@color/black"
				android:paddingLeft="30dip"></TextView>
			<ListView android:id="@+id/usercenter_listview_id_two"
				android:cacheColorHint="#00000000" android:layout_width="300dip"
				android:layout_height="165dip" android:background="@drawable/usercenter_bg"
				android:layout_gravity="center_horizontal">
			</ListView>
		</LinearLayout>
	</ScrollView>
</LinearLayout>