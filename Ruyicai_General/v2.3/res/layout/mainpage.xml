<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:orientation="vertical" android:background="@drawable/shouye_bg">
	<LinearLayout android:orientation="horizontal"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:gravity="center_horizontal" android:background="@drawable/gundongbg">
		<ViewFlipper android:id="@+id/notice_other_flipper"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:flipInterval="5000">
			<TextView android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:gravity="center_vertical|center_horizontal"
				android:textSize="15sp" android:textColor="@color/black" android:id="@+id/notice_other_title" />
		</ViewFlipper>
	</LinearLayout>
	<ScrollView android:layout_toLeftOf="@+id/mainpage_ssq_sign"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:id="@+id/ScrollView01" android:paddingTop="20dip">
		<LinearLayout android:layout_width="fill_parent"
			android:layout_height="fill_parent" android:orientation="vertical"
			android:gravity="center_horizontal|center_vertical">
			<RelativeLayout android:id="@+id/r_layout1"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:layout_above="@+id/r_layout2">
				<LinearLayout android:layout_width="fill_parent"
					android:layout_height="wrap_content" android:background="@drawable/ban1"
					android:layout_alignBottom="@+id/layout1_top">
				</LinearLayout>
				<LinearLayout android:layout_width="fill_parent"
					android:layout_height="wrap_content" android:id="@+id/layout1_top"
					android:gravity="center_horizontal">
					<ImageView android:id="@+id/mainpage_ssq_sign"
						android:layout_width="wrap_content" android:layout_height="wrap_content"
						android:src="@drawable/shuangseqiu" android:layout_toLeftOf="@+id/mainpage_fc3d_sign"></ImageView>
					<ImageView android:id="@+id/mainpage_fc3d_sign"
						android:layout_width="wrap_content" android:layout_height="wrap_content"
						android:src="@drawable/fucai3d" android:layout_centerHorizontal="true"
						android:paddingRight="30dip" android:paddingLeft="30dip"></ImageView>
					<ImageView android:id="@+id/mainpage_ssc_sign"
						android:layout_width="wrap_content" android:layout_height="wrap_content"
						android:src="@drawable/shishicai" android:layout_toRightOf="@+id/mainpage_fc3d_sign"></ImageView>
				</LinearLayout>
			</RelativeLayout>
			<RelativeLayout android:id="@+id/r_layout2"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:layout_above="@+id/r_layout3" android:paddingTop="20px">
				<LinearLayout android:layout_width="fill_parent"
					android:id="@+id/layout2_bottom" android:layout_height="wrap_content"
					android:background="@drawable/ban2" android:layout_alignBottom="@+id/layout2_top">
				</LinearLayout>
				<LinearLayout android:layout_width="fill_parent"
					android:id="@+id/layout2_top" android:layout_height="wrap_content"
					android:layout_alignParentTop="true" android:gravity="center_horizontal"
					android:paddingBottom="5dip">
					<ImageView android:id="@+id/mainpage_dlt_sign"
						android:layout_width="wrap_content" android:layout_height="wrap_content"
						android:src="@drawable/daletou"></ImageView>
					<ImageView android:id="@+id/mainpage_qlc_sign"
						android:layout_width="wrap_content" android:layout_height="wrap_content"
						android:src="@drawable/qilecai" android:paddingRight="30dip"
						android:paddingLeft="30dip"></ImageView>
					<ImageView android:id="@+id/mainpage_pl3_sign"
						android:layout_width="wrap_content" android:layout_height="wrap_content"
						android:src="@drawable/pailiesan"></ImageView>

				</LinearLayout>
			</RelativeLayout>
			<RelativeLayout android:id="@+id/r_layout3"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:paddingTop="20px" android:layout_above="@+id/r_layout4">
				<LinearLayout android:layout_width="fill_parent"
					android:layout_height="wrap_content" android:background="@drawable/ban3"
					android:id="@+id/layout3_bottom" android:layout_alignBottom="@+id/layout3_top">
				</LinearLayout>
				<LinearLayout android:layout_width="fill_parent"
					android:layout_height="wrap_content" android:id="@+id/layout3_top"
					android:gravity="center_horizontal" android:paddingBottom="7dip">
					<ImageView android:id="@+id/mainpage_sfc_sign"
						android:layout_width="wrap_content" android:layout_height="wrap_content"
						android:src="@drawable/shenfucai"></ImageView>
					<ImageView android:id="@+id/mainpage_rxq_sign"
						android:layout_width="wrap_content" android:layout_height="wrap_content"
						android:src="@drawable/renxuanjiu" android:paddingRight="30dip"
						android:paddingLeft="30dip"></ImageView>
					<ImageView android:id="@+id/mainpage_jqc_sign"
						android:layout_width="wrap_content" android:layout_height="wrap_content"
						android:src="@drawable/jinqiucai"></ImageView>
				</LinearLayout>
			</RelativeLayout>
			<RelativeLayout android:id="@+id/r_layout4"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:paddingTop="20dip" android:layout_alignParentBottom="true">
				<LinearLayout android:layout_width="fill_parent"
					android:layout_height="wrap_content" android:background="@drawable/ban4"
					android:id="@+id/layout4_bottom" android:layout_alignBottom="@+id/layout4_top">
				</LinearLayout>
				<LinearLayout android:layout_width="fill_parent"
					android:layout_height="wrap_content" android:id="@+id/layout4_top"
					android:paddingBottom="90dip" android:gravity="center_horizontal">
					<ImageView android:id="@+id/mainpage_lcb_sign"
						android:layout_width="wrap_content" android:layout_height="wrap_content"
						android:src="@drawable/liuchangban"></ImageView>
					<ImageView android:id="@+id/mainpage_luck_sign"
						android:layout_width="wrap_content" android:layout_height="wrap_content"
						android:src="@drawable/luck_sign" android:paddingRight="30dip"
						android:paddingLeft="30dip"></ImageView>
					<ImageView android:id="@+id/mainpage_caiming_sign"
						android:layout_width="wrap_content" android:layout_height="wrap_content"
						android:src="@drawable/caiming_sign"></ImageView>
				</LinearLayout>
			</RelativeLayout>
		</LinearLayout>
	</ScrollView>
</LinearLayout>