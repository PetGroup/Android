<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:background="@color/white">
	<RelativeLayout android:orientation="horizontal"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:background="@drawable/list_top" android:paddingLeft="10dip"
		android:paddingRight="10dip">

		<ImageView android:id="@+id/ruyizhushou_btn_return"
			android:src="@drawable/returnselecter" android:background="#00000000"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:layout_alignParentLeft="true" android:layout_centerVertical="true" />
		<TextView android:id="@+id/ruyipackage_title"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:layout_centerHorizontal="true" android:textAppearance="?android:attr/textAppearanceMedium"
			android:typeface="serif" android:text=""
			android:layout_centerVertical="true" android:textColor="@color/black"
			android:textSize="20dip" android:imeOptions="actionNext"
			 />
		<Button android:id="@+id/tijiao" android:layout_width="90dp"
			android:layout_height="wrap_content" android:text="发  表"
			android:layout_alignParentRight="true" android:layout_centerVertical="true" ></Button>

	</RelativeLayout>
	<EditText android:layout_width="fill_parent" 
		android:layout_height="140dip" android:id="@+id/yonghufankui"
		android:gravity="top"  android:hint="@string/yonghufankui_edit_hint_msg"/>
	<EditText android:layout_width="fill_parent" android:layout_height="wrap_content" android:id="@+id/feedbackconnection"
	android:hint="@string/feedbacconnection"></EditText>
	</LinearLayout>