<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:background="@color/white">
	<!--  android:background="@drawable/shouye_bei"-->
	<!--android:background="#FFF8D7"  -->
	<!-- android:background="@drawable/bottom_bar" -->
	<!--
		<TextView android:layout_gravity="center" android:textSize="16dip"
		android:id="@+id/notice_prizes_title"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"> </TextView>
	-->
	<!--
		android:scrollbarTrackHorizontal="@drawable/scroll_track"
		android:scrollbarAlwaysDrawHorizontalTrack="true"
		android:scrollbarThumbHorizontal="@drawable/tiaotiao"
	-->



	<LinearLayout android:id="@+id/LinearLayout02"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:orientation="vertical">
		<TextView android:textColor="#FF9224"
			android:layout_marginTop="8dip" android:layout_gravity="center_horizontal"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:typeface="serif" android:id="@+id/buyLotteryMainList_join_title_one"
			android:paddingTop="20px" android:layout_width="wrap_content"
			android:layout_height="wrap_content">
		</TextView>
		<LinearLayout android:id="@+id/LinearLayout06"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:orientation="horizontal">
			<TextView android:textColor="@color/black"
				android:layout_marginTop="8dip" android:layout_marginLeft="20dip"
				android:fadingEdge="horizontal" android:layout_marginRight="10dip"
				android:textAppearance="?android:attr/textAppearanceMedium"
				android:typeface="serif" android:id="@+id/buyLotteryMainList_join_title_two"
				android:paddingTop="10px" android:text="" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:textSize="15px">
			</TextView>
			<HorizontalScrollView android:id="@+id/HorizontalScrollView01"
				android:scrollbarTrackHorizontal="@drawable/scrollbar_horizontal_track"
				android:scrollbarThumbHorizontal="@drawable/scrollbar_horizontal_thumb"
				android:scrollbarSize="2dip" android:layout_width="wrap_content"
				android:layout_height="50dip">
				<RadioGroup android:id="@+id/notice_radioGroup_join"
					android:layout_width="fill_parent" android:layout_height="wrap_content"
					android:orientation="horizontal" android:paddingTop="22px"></RadioGroup>
			</HorizontalScrollView>
		</LinearLayout>

	</LinearLayout>
	<RelativeLayout android:id="@+id/RelativeLayout03"
		android:layout_width="fill_parent" android:layout_height="fill_parent">
		<ListView android:id="@+id/buy_join_list"
			android:cacheColorHint="#00000000" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:layout_marginBottom="100px"></ListView>
		<LinearLayout android:id="@+id/LinearLayout03"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:orientation="vertical" android:layout_alignParentBottom="true">
			<ViewFlipper android:id="@+id/notice_other_flipper"
				android:paddingTop="4px" android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:flipInterval="2000"
				android:background="@drawable/shouye_bottom1">
				<TextView android:layout_width="fill_parent"
					android:layout_height="wrap_content" android:gravity="center_horizontal"
					android:textSize="15px" android:textColor="@color/black"
					android:id="@+id/notice_other_title" />
			</ViewFlipper>
			
		</LinearLayout>
	</RelativeLayout>
</LinearLayout>
