<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="85dp"
    android:background="@color/white"
    android:paddingTop="2dp" android:paddingBottom="2dp" 
    android:paddingLeft="5dp">

        <RelativeLayout android:id="@+id/join_Check_top"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" android:paddingRight="20dp">

            <TextView
                android:id="@+id/join_check_item_text_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="20sp" />
			<TextView  android:id="@+id/join_check_item_text_result"
			    android:layout_toRightOf="@id/join_check_item_text_icon"
			    android:textColor="@color/black"
			     android:layout_height="wrap_content" android:layout_width="wrap_content"/>
 
            <TextView android:layout_alignParentRight="true" 
                android:id="@+id/join_check_item_text_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black" />
        </RelativeLayout>

        <RelativeLayout android:layout_below="@id/join_Check_top"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingTop="6dip"  android:paddingRight="20dp">

            <TextView
                android:id="@+id/join_check_item_text_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#663333" >
            </TextView>

            <TextView android:layout_marginLeft="20dp" android:layout_toRightOf="@id/join_check_item_text_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="认购金额："
                android:textColor="@color/black" >
            </TextView>

            <TextView android:layout_alignParentRight="true"
                android:id="@+id/join_check_item_text_amt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text=""
                android:textColor="@color/red" >
            </TextView>
        </RelativeLayout>

    <ImageView 
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:src="@drawable/usercenter_ico_triangle"
       />

</RelativeLayout>