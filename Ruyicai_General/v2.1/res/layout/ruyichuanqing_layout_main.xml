<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<RelativeLayout android:id="@+id/ruyichuanqing_layout_title"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:background="@drawable/bottom_bar" android:paddingTop="10px">
		<TextView android:id="@+id/ruyichuanqing_title"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:typeface="serif" android:text="@string/ruyichuangqing"
			android:layout_centerHorizontal="true" android:textSize="20px"
			android:textColor="@color/white" />
		<!-- 周黎鸣7.3将Button换成ImageButton -->
		<ImageView android:id="@+id/ruyichuanqing_return"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:src="@drawable/return_btn" android:background="#00000000"
			android:layout_alignParentLeft="true" android:paddingLeft="10px" />

	</RelativeLayout>
	<LinearLayout android:id="@+id/ruyichuanqing_layout_title"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:weightSum="5" android:orientation="horizontal">
		<TextView android:id="@+id/tv_ruyichuanqing_ssq"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:text="@string/shuangseqiu" android:textColor="#000000"
			android:layout_weight="1" />
		<TextView android:id="@+id/tv_ruyichuanqing_fc3d"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:text="@string/fucai3d" android:layout_weight="1"
			android:textColor="#000000" />
		<TextView android:id="@+id/tv_ruyichuanqing_qlc"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:text="@string/qilecai" android:layout_weight="1"
			android:textColor="#000000" />
		<TextView android:id="@+id/tv_ruyichuanqing_pl3"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:text="@string/pailie3" android:layout_weight="1"
			android:textColor="#000000" />
		<TextView android:id="@+id/tv_ruyichuanqing_dlt"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:text="@string/dlt" android:layout_weight="1"
			android:textColor="#000000" />

	</LinearLayout>

	<ScrollView android:id="@+id/ruyichuanqing_scroll_global"
		android:layout_width="fill_parent" android:layout_height="wrap_content">
		<LinearLayout android:id="@+id/ruyichuanqing_layout_sub"
			android:orientation="vertical" android:layout_width="fill_parent"
			android:layout_height="wrap_content" />
	</ScrollView>
</LinearLayout>
