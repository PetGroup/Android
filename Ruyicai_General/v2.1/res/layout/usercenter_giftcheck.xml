<?xml version="1.0" encoding="UTF-8" ?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/usercenter_giftcheck_scrollview" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:background="#FFFFFF">

	<RelativeLayout android:orientation="vertical"
		android:layout_width="fill_parent" android:layout_height="fill_parent">
		<RelativeLayout
			android:id="@+id/usercenter_presentedlottery_relativelayout_title"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:background="@drawable/bottom_bar" android:paddingTop="10px">
			<TextView android:id="@+id/usercenter_giftcheck_presentedlottery_title"
				android:textSize="20px" android:textColor="@color/white"
				android:layout_width="fill_parent" android:layout_height="fill_parent"
				android:layout_centerHorizontal="true" android:gravity="center"
				android:text="@string/usercenter_giftCheck_presentedLottery" />

			<ImageButton android:id="@+id/usercenter_giftcheck_return"
				android:layout_alignParentLeft="true" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:background="#00000000"
				android:src="@drawable/return_btn" />

		</RelativeLayout>

		<TextView android:id="@+id/usercenter_giftcheck_presentedlottery_body"
			android:textColor="#000000" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:layout_alignParentLeft="true"
			android:layout_below="@+id/usercenter_presentedlottery_relativelayout_title" />

		<RelativeLayout android:id="@+id/usercenter_presentedlottery_relativelayout_btn"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:layout_below="@+id/usercenter_giftcheck_presentedlottery_body">
			<Button android:id="@+id/usercenter_giftcheck_presentedlottery_downPage"
				android:layout_width="64dip" android:layout_height="wrap_content"
				android:layout_alignParentRight="true" android:text="@string/usercenter_downPage" />
			<Button android:id="@+id/usercenter_giftcheck_presentedlottery_upPage"
				android:layout_toLeftOf="@+id/usercenter_giftcheck_presentedlottery_downPage"
				android:layout_width="64dip" android:layout_height="wrap_content"
				android:text="@string/usercenter_upPage" />

		</RelativeLayout>

		<TextView android:id="@+id/usercenter_giftcheck_receivedlottery_title"
			android:textColor="#000000" android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@+id/usercenter_presentedlottery_relativelayout_btn"
			android:layout_centerHorizontal="true"
			android:text="@string/usercenter_giftCheck_receivedLottery" />

		<TextView android:id="@+id/usercenter_giftcheck_receivedlottery_body"
			android:textColor="#000000" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:layout_alignParentLeft="true"
			android:layout_below="@+id/usercenter_giftcheck_receivedlottery_title" />

		<RelativeLayout android:id="@+id/usercenter_receivedlottery_relativelayout_btn"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:layout_below="@+id/usercenter_giftcheck_receivedlottery_body">
			<Button android:id="@+id/usercenter_giftcheck_receivedlottery_downPage"
				android:layout_alignParentRight="true" android:layout_width="64dip"
				android:layout_height="wrap_content" android:text="@string/usercenter_downPage" />
			<Button android:id="@+id/usercenter_giftcheck_receivedlottery_upPage"
				android:layout_toLeftOf="@+id/usercenter_giftcheck_receivedlottery_downPage"
				android:layout_width="64dip" android:layout_height="wrap_content"
				android:text="@string/usercenter_upPage" />
		</RelativeLayout>

	</RelativeLayout>
</ScrollView>