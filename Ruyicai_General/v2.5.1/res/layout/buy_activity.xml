<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:orientation="vertical" android:background="@drawable/bg">
	<LinearLayout android:orientation="horizontal"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:gravity="center_horizontal" android:background="@drawable/gundongbg">
		<ViewFlipper android:id="@+id/notice_other_flipper"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:flipInterval="5000">
			<TextView android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:gravity="center_vertical|center_horizontal"
				android:textSize="14sp" android:textColor="@color/black" android:id="@+id/notice_other_title" />
		</ViewFlipper>
	</LinearLayout>
	<RelativeLayout android:layout_width="fill_parent"
		android:layout_height="fill_parent" android:orientation="vertical"
		android:background="@drawable/main_bot_bg" android:layout_marginLeft="10dip"
		android:layout_marginRight="10dip" android:layout_marginTop="7dip"
		android:layout_marginBottom="10dip">
		<ScrollView android:layout_toLeftOf="@+id/mainpage_ssq_sign"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:id="@+id/ScrollView01" android:scrollbars="none"
			android:paddingTop="15dip" android:paddingBottom="60sp">
			<LinearLayout android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:orientation="vertical"
				android:gravity="center_horizontal|center_vertical">
				<LinearLayout android:layout_width="fill_parent"
					android:layout_height="wrap_content" android:id="@+id/layout1_top"
					android:gravity="center_horizontal">
					<LinearLayout android:layout_width="wrap_content"
						android:layout_height="wrap_content" android:orientation="vertical">
						<ImageView android:id="@+id/mainpage_hemai_sign"
							android:layout_width="wrap_content" android:layout_height="wrap_content"
							android:src="@drawable/ico_buy" android:layout_toLeftOf="@+id/mainpage_fc3d_sign"></ImageView>
						<TextView android:layout_width="fill_parent"
							android:layout_height="wrap_content" android:text="合买大厅"
							android:gravity="center_horizontal" android:textColor="@color/black"
							android:textSize="15sp"></TextView>
					</LinearLayout>
					<LinearLayout android:layout_width="wrap_content"
						android:layout_height="wrap_content" android:orientation="vertical">
						<ImageView android:id="@+id/mainpage_ssq_sign"
							android:layout_width="wrap_content" android:layout_height="wrap_content"
							android:src="@drawable/ico_double"
							android:layout_centerHorizontal="true" android:paddingRight="30dip"
							android:paddingLeft="30dip"></ImageView>
						<TextView android:layout_width="fill_parent"
							android:layout_height="wrap_content" android:text="双色球"
							android:gravity="center_horizontal" android:textColor="@color/black"
							android:textSize="15sp"></TextView>
					</LinearLayout>
					<LinearLayout android:layout_width="wrap_content"
						android:layout_height="wrap_content" android:orientation="vertical">
						<ImageView android:id="@+id/mainpage_fc3d_sign"
							android:layout_width="wrap_content" android:layout_height="wrap_content"
							android:src="@drawable/ico_3d" android:layout_toRightOf="@+id/mainpage_fc3d_sign"></ImageView>
						<TextView android:layout_width="fill_parent"
							android:layout_height="wrap_content" android:text="福彩3D"
							android:gravity="center_horizontal" android:textColor="@color/black"
							android:textSize="15sp"></TextView>
					</LinearLayout>
				</LinearLayout>
				<LinearLayout android:layout_width="fill_parent"
					android:id="@+id/layout2_top" android:layout_height="wrap_content"
					android:layout_alignParentTop="true" android:gravity="center_horizontal"
					android:paddingTop="20dip">
					<LinearLayout android:layout_width="wrap_content"
						android:layout_height="wrap_content" android:orientation="vertical">
						<ImageView android:id="@+id/mainpage_11x5_sign"
							android:layout_width="wrap_content" android:layout_height="wrap_content"
							android:src="@drawable/ico_115"></ImageView>
						<TextView android:layout_width="fill_parent"
							android:layout_height="wrap_content" android:text="11选5"
							android:gravity="center_horizontal" android:textColor="@color/black"
							android:textSize="15sp"></TextView>
					</LinearLayout>
					<LinearLayout android:layout_width="wrap_content"
						android:layout_height="wrap_content" android:orientation="vertical">
						<ImageView android:id="@+id/mainpage_dlt_sign"
							android:layout_width="wrap_content" android:layout_height="wrap_content"
							android:src="@drawable/ico_super" android:paddingRight="30dip"
							android:paddingLeft="30dip"></ImageView>
						<TextView android:layout_width="fill_parent"
							android:layout_height="wrap_content" android:text="大乐透"
							android:gravity="center_horizontal" android:textColor="@color/black"
							android:textSize="15sp"></TextView>
					</LinearLayout>
					<LinearLayout android:layout_width="wrap_content"
						android:layout_height="wrap_content" android:orientation="vertical">
						<ImageView android:id="@+id/mainpage_ssc_sign"
							android:layout_width="wrap_content" android:layout_height="wrap_content"
							android:src="@drawable/ico_timec"></ImageView>
						<TextView android:layout_width="fill_parent"
							android:layout_height="wrap_content" android:text="时时彩"
							android:gravity="center_horizontal" android:textColor="@color/black"
							android:textSize="15sp"></TextView>
					</LinearLayout>
				</LinearLayout>
				<LinearLayout android:layout_width="fill_parent"
					android:layout_height="wrap_content" android:id="@+id/layout3_top"
					android:gravity="center_horizontal" android:paddingTop="20dip"
					android:paddingBottom="10sp">
					<LinearLayout android:layout_width="wrap_content"
						android:layout_height="wrap_content" android:orientation="vertical">
						<ImageView android:id="@+id/mainpage_qlc_sign"
							android:layout_width="wrap_content" android:layout_height="wrap_content"
							android:src="@drawable/ico_seven"></ImageView>
						<TextView android:layout_width="fill_parent"
							android:layout_height="wrap_content" android:text="七乐彩"
							android:gravity="center_horizontal" android:textColor="@color/black"
							android:textSize="15sp"></TextView>
					</LinearLayout>
					<LinearLayout android:layout_width="wrap_content"
						android:layout_height="wrap_content" android:orientation="vertical">
						<ImageView android:id="@+id/mainpage_pl3_sign"
							android:layout_width="wrap_content" android:layout_height="wrap_content"
							android:src="@drawable/ico_three" android:paddingRight="30dip"
							android:paddingLeft="30dip"></ImageView>
						<TextView android:layout_width="fill_parent"
							android:layout_height="wrap_content" android:text="排列三"
							android:gravity="center_horizontal" android:textColor="@color/black"
							android:textSize="15sp"></TextView>
					</LinearLayout>
					<LinearLayout android:layout_width="wrap_content"
						android:layout_height="wrap_content" android:orientation="vertical">
						<ImageView android:id="@+id/mainpage_zucai_sign"
							android:layout_width="wrap_content" android:layout_height="wrap_content"
							android:src="@drawable/ico_goalin"></ImageView>
						<TextView android:layout_width="fill_parent"
							android:layout_height="wrap_content" android:text="足彩"
							android:gravity="center_horizontal" android:textColor="@color/black"
							android:textSize="15sp"></TextView>
					</LinearLayout>
				</LinearLayout>
			</LinearLayout>
		</ScrollView>
		<LinearLayout android:layout_width="fill_parent"
			android:background="@drawable/main_ico_bg" android:layout_height="wrap_content"
			android:id="@+id/layout4_top" android:paddingTop="10dip"
			android:layout_marginLeft="5dip" android:layout_marginRight="5dip"
			android:gravity="center_horizontal" android:layout_alignParentBottom="true">
			<Button android:id="@+id/mainpage_usercenter"
				style="@style/HomeThreeBtn"
				android:text="用户中心"></Button>
			<Button android:id="@+id/mainpage_luck_sign"
				style="@style/HomeThreeBtn"
				android:text="幸运选号" android:layout_marginLeft="6sp"></Button>
			<Button android:id="@+id/mainpage_help" style="@style/HomeThreeBtn" android:text="帮助中心"
				android:layout_marginLeft="6sp"></Button>
		</LinearLayout>
	</RelativeLayout>
</LinearLayout>