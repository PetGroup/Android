<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/list_color"
    android:orientation="vertical" >

    <RelativeLayout
       
        android:id="@+id/ruyihelper_listview_relative"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shouye_top"
        android:orientation="horizontal"
        android:paddingLeft="10sp" >

        <Button
            android:visibility="invisible"
            android:id="@+id/ruyizhushou_btn_return"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dip"
            android:text="@string/str_return"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/ruyipackage_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/bangzhuzhongxin"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:typeface="serif" />
    </RelativeLayout>

    <ListView
        android:id="@+id/ruyihelper_listview_ruyihelper_id"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:dividerHeight="0dip"
        android:fadingEdge="none"
        android:scrollingCache="false" >
    </ListView>

</LinearLayout>