<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="wrap_content"
	android:layout_height="wrap_content" android:background="#FFFFFF"
	android:layout_marginLeft="5dp" android:layout_marginRight="5dp">
	<LinearLayout android:orientation="horizontal" android:gravity="center_horizontal"
		android:layout_margin="5dp" android:id="@+id/titletext_football"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:background="@drawable/shouye_top">
		<TextView android:text="账户提现" style="@style/UserTitleText" />
	</LinearLayout>
	<ScrollView android:id="@+id/ScrollView01"
		android:layout_below="@+id/titletext_football" android:layout_width="wrap_content"
		android:layout_height="wrap_content">
		<LinearLayout android:layout_width="fill_parent"
			android:layout_height="fill_parent" android:orientation="vertical">
			<LinearLayout android:id="@+id/LinearLayout08"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:orientation="vertical" android:padding="10px">
				<LinearLayout android:id="@+id/LinearLayout02"
					android:gravity="center_horizontal" android:layout_width="fill_parent"
					android:layout_height="wrap_content">
					<TextView android:text="@string/get_money_name"
						android:textColor="@color/black" android:id="@+id/TextView02"
						android:layout_width="wrap_content" android:layout_height="wrap_content"
						android:textSize="16sp"></TextView>
					<EditText android:text="" android:id="@+id/get_money_name_edit"
						android:gravity="center_vertical" android:layout_width="wrap_content"
						android:layout_height="40dp" android:textColor="@color/black"
						android:width="220dip" android:singleLine="true"></EditText>
				</LinearLayout>
				<LinearLayout android:id="@+id/LinearLayout03"
					android:gravity="center_horizontal" android:layout_width="fill_parent"
					android:layout_height="wrap_content">
					<TextView android:text="@string/get_money_bank"
						android:textColor="@color/black" android:id="@+id/TextView03"
						android:layout_width="wrap_content" android:layout_height="wrap_content"
						android:textSize="16sp" android:paddingTop="15px"></TextView>
					<Spinner android:id="@+id/get_money_bank_spinner"
						android:layout_width="220dip" android:layout_height="40dp"
						android:drawSelectorOnTop="true" android:prompt="@string/get_money_bank_type"
						android:entries="@array/brank_type"></Spinner>
				</LinearLayout>
				<LinearLayout android:id="@+id/LinearLayout04"
					android:gravity="center_horizontal" android:layout_width="fill_parent"
					android:layout_height="wrap_content">
					<TextView android:text="@string/get_money_bank_start"
						android:textColor="@color/black" android:id="@+id/TextView04"
						android:layout_width="wrap_content" android:layout_height="wrap_content"
						android:textSize="16sp"></TextView>
					<EditText android:text="" android:id="@+id/get_money_bank_start_edit"
						android:textColor="@color/black" android:layout_width="wrap_content"
						android:layout_height="40dp" android:width="220dip" android:hint="如：北京市海淀区"
						android:singleLine="true"></EditText>
				</LinearLayout>
				<LinearLayout android:id="@+id/LinearLayout05"
					android:gravity="center_horizontal" android:layout_width="fill_parent"
					android:layout_height="wrap_content">
					<TextView android:text="@string/get_money_bank_num"
						android:textColor="@color/black" android:id="@+id/TextView05"
						android:layout_width="wrap_content" android:layout_height="wrap_content"
						android:textSize="16sp"></TextView>
					<EditText android:text="" android:id="@+id/get_money_bank_num_edit"
						android:textColor="@color/black" android:layout_width="wrap_content"
						android:layout_height="40dp" android:width="220dip"
						android:singleLine="true" android:maxLength="20" android:numeric="integer"></EditText>
				</LinearLayout>
				<LinearLayout android:id="@+id/LinearLayout06"
					android:gravity="center_horizontal" android:layout_width="fill_parent"
					android:layout_height="wrap_content">
					<TextView android:text="@string/get_money_money"
						android:textColor="@color/black" android:id="@+id/get_money_money_text"
						android:layout_width="wrap_content" android:layout_height="wrap_content"
						android:textSize="16sp"></TextView>
					<EditText android:text="" android:id="@+id/get_money_money_edit"
						android:layout_width="wrap_content" android:layout_height="40dp"
						android:textColor="@color/black" android:width="220dip"
						android:singleLine="true" android:numeric="integer" android:hint="单位(元)"></EditText>
				</LinearLayout>
				<LinearLayout android:id="@+id/LinearLayout07"
					android:gravity="center_horizontal" android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:padding="10px">
					<TextView android:text="@string/get_money_alert"
						android:textColor="@color/black" android:id="@+id/TextView07"
						android:layout_width="wrap_content" android:layout_height="wrap_content"
						android:textSize="15sp"></TextView>
				</LinearLayout>

			</LinearLayout>
		</LinearLayout>
	</ScrollView>
	<LinearLayout android:orientation="horizontal"
		android:gravity="center_vertical" android:layout_below="@+id/ScrollView01"
		android:layout_width="fill_parent" android:background="@drawable/buy_bot_bg"
		android:layout_height="60dp" android:paddingTop="5dip">

		<LinearLayout android:layout_weight="1" android:gravity="center"
			android:layout_width="fill_parent" android:layout_height="wrap_content">
			<Button android:id="@+id/usercenter_changepwd_submit"
				android:text="提交" android:gravity="center"
				android:background="@drawable/usercenter_lookdetaildialog_closebtn_selector"
				android:layout_width="wrap_content" android:layout_height="wrap_content" />
		</LinearLayout>
		<LinearLayout android:layout_weight="1" android:gravity="center"
			android:layout_width="fill_parent" android:layout_height="wrap_content">
			<Button android:id="@+id/usercenter_changepwd_back"
				android:text="返回" android:gravity="center"
				android:background="@drawable/usercenter_lookdetaildialog_closebtn_selector"
				android:layout_width="wrap_content" android:layout_height="wrap_content" />
		</LinearLayout>
	</LinearLayout>
</RelativeLayout>