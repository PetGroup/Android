<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:background="@drawable/upomp_lthj_progress_bg"
    android:padding="@dimen/upomp_lthj_common_dialog_padding"
    >                
    <TextView style="@style/upomp_lthj_layout_width_height_ff" android:layout_weight="1.0"/>
    <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="fill_parent"
    	android:gravity="center" android:layout_weight="1.0">
		<TextView style="@style/upomp_lthj_layout_width_height_ww"
			android:id="@id/upomp_lthj_textview01" android:textColor="@drawable/upomp_lthj_black"
			android:textSize="@dimen/upomp_lthj_textview_font_size" android:singleLine="false"
			android:paddingLeft="16dip"
			android:paddingRight="16dip"
			/>
    </LinearLayout>
    <LinearLayout style="@style/upomp_lthj_layout_width_height_fw" android:gravity="center_horizontal">
	    <Button android:id="@id/upomp_lthj_button_cancel" android:textSize="@dimen/upomp_lthj_button_single_font_size"
	    	 android:text="@string/upomp_lthj_str_no"
	    	 android:layout_width="wrap_content" android:textColor="@drawable/upomp_lthj_gray"
	     android:layout_height="wrap_content" android:background="@drawable/upomp_lthj_small_whitebtn" android:layout_alignParentLeft="true"/>
	     <Button android:id="@id/upomp_lthj_button_ok" android:textSize="@dimen/upomp_lthj_button_single_font_size"
	    	 android:text="@string/upomp_lthj_str_ok" android:layout_marginLeft="10.0dip"
	    	 android:layout_width="wrap_content" android:textColor="@drawable/upomp_lthj_white" 
	     android:layout_height="wrap_content" android:background="@drawable/upomp_lthj_small_bluebtn" android:layout_alignParentRight="true"/>
     </LinearLayout>
</LinearLayout>