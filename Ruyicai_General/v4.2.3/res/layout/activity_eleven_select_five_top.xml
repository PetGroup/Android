<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/topLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <!-- 标题栏 -->

        <RelativeLayout
            android:id="@+id/eleven_select_five_title_relativelayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/nmk3_head_bg" >

            <RelativeLayout
                android:layout_width="197dp"
                android:layout_height="27dp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:gravity="center_horizontal" >

                <ImageView
                    android:id="@+id/topViewTitleBackGround"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/chongqing_toubu_down" />

                <!-- 彩种标题 -->

                <TextView
                    android:id="@+id/eleven_select_five_title_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_centerInParent="true"
                    android:text="重庆11选5-任选五-普通"
                    android:textColor="@color/white"
                    android:textSize="14sp" >
                </TextView>
                
                <ImageView 
                    android:id="@+id/newNmkThreeDownIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/new_nmk3_top_title_down"
                    android:layout_centerVertical="true"
                    android:visibility="gone"
                    android:layout_toRightOf="@+id/eleven_select_five_title_textview"/>
            </RelativeLayout>

            <Button
                android:id="@+id/eleven_select_five_refresh_Btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="35dip"
                android:background="@drawable/refresh_last_code"
                android:textColor="@color/white"
                android:textSize="15dip" />

            <Button
                android:id="@+id/eleven_select_five_down_window"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dip"
                android:background="@drawable/buy_group_top_icon"
                android:gravity="center_vertical|center_horizontal"
                android:textColor="@color/white"
                android:textSize="15dip" />
        </RelativeLayout>

        <!-- 
        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@drawable/toubu_caizhongshaixuan" />
             -->

        <!-- 彩票信息栏 -->

        <RelativeLayout
            android:id="@+id/eleven_select_five_lotteryinfo_relativelayout"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:orientation="horizontal" >

            <!-- 走势图按钮 -->

            <Button
                android:id="@+id/eleven_select_five__zoushitu_button"
                android:layout_width="wrap_content"
                android:layout_height="26dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:background="@drawable/nmk3_zoushitu"
                android:paddingLeft="3dip"
                android:textColor="@color/white"
                android:textSize="13sp"
                android:paddingRight="3dip" >
            </Button>
            <!-- 遗漏组合按钮 -->

            <Button
                android:id="@+id/eleven_select_five_omission_button"
                android:layout_width="wrap_content"
                android:layout_height="26dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:layout_toRightOf="@+id/eleven_select_five__zoushitu_button"
                android:background="@drawable/eleven_select_five_yilou_zuhe"
                android:paddingLeft="3dip"
                android:paddingRight="3dip" >
            </Button>

            <!-- 投注提示信息 -->

            <TextView
                android:id="@+id/last_batchcode_textlable_red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="3dp"
                android:layout_toLeftOf="@+id/layout_main_text_time"
                android:text="至少选择2个号码"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:visibility="gone" >
            </TextView>

            <!-- 截止时间 -->

            <TextView
                android:id="@+id/elect_select_five_endtime_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingRight="5dip"
                android:text="距离06期截至:3分13秒"
                android:textColor="@color/white"
                android:textSize="13sp" >
            </TextView>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/touzhuMessage"
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:orientation="horizontal"
            android:paddingBottom="2.6dip"
            android:paddingTop="2.6dip" >

            <!-- 玩法信息 -->

            <TextView
                android:id="@+id/elect_select_five_palymethod_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:paddingBottom="5dip"
                android:paddingLeft="4dip"
                android:paddingTop="5dip"
                android:text="猜中开奖的任意2个号即奖6元"
                android:textColor="@color/cq_11_5_text_color"
                android:textSize="13sp" >
            </TextView>

            <!-- 遗漏值 -->

            <TextView
                android:id="@+id/missTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@+id/elect_select_five_miss_checkbox"
                android:text="遗漏"
                android:textColor="@color/cq_11_5_text_color"
                android:textSize="13sp" >
            </TextView>

            <CheckBox
                android:id="@+id/elect_select_five_miss_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:button="@drawable/chongqing_yilou_selector"
                android:checked="true" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>