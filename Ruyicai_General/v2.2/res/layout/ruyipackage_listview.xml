<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="fill_parent">
	<RelativeLayout android:id="@+id/ruyipackage_relativelayout"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:background="@drawable/buy_top" android:paddingTop="10px">
		<TextView android:id="@+id/ruyipackage_title"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:gravity="center" android:layout_centerHorizontal="true"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:typeface="serif" android:text="@string/ruyitaocan"
			android:textSize="20px" android:textColor="@color/black" />
		<!-- 周黎鸣7.3将Button换成ImageButton -->
		<ImageView android:id="@+id/ruyipackage_btn_return"
			android:src="@drawable/returnselecter" android:background="#00000000"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:layout_alignParentLeft="true" android:paddingLeft="10px" />
	</RelativeLayout>
	<ListView android:id="@+id/ruyipackage_listview_id"
		android:cacheColorHint="#00000000" android:listSelector="#00000000"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:layout_below="@+id/ruyipackage_relativelayout"
		android:background="@color/white">
	</ListView>

</RelativeLayout>