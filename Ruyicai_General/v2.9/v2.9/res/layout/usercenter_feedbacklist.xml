<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" android:background="@color/white">

    <RelativeLayout
        android:id="@+id/main_buy_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shouye_top" >

        <TextView
            android:id="@+id/usercenter_mainlayou_text_title"
            style="@style/UserTitleTextLeft"
            android:text="@string/usercenter_mymessage" >
        </TextView>

        <Button
            android:id="@+id/usercenter_feedbacklist_img_return"
            android:layout_width="wrap_content"
            android:layout_height="30dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dip"
            android:background="@drawable/returnselecter"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:text="@string/returnlastpage"
            android:textColor="@color/white"
            android:textSize="15dip" >
        </Button>
    </RelativeLayout>

    <ListView android:id="@+id/usercenter_feedback_list"
        android:paddingBottom="50dp"
        android:cacheColorHint="@color/transparent"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/main_buy_title" 
        android:divider="@drawable/litt"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/buy_bot_bg"
        android:gravity="center">

        <Button  android:padding="5dp"
            android:id="@+id/usercenter_feedback_submitbtn"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@drawable/join_info_btn_selecter"
            android:text="@string/usercenter_submitfeedback"
            android:textSize="18sp" />
    </LinearLayout>

</RelativeLayout>