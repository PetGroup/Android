<?xml version="1.0" encoding="utf-8"?>
	<!-- 合买大厅 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="wrap_content"
	android:layout_height="wrap_content" android:background="@color/white">
	<RelativeLayout android:id="@+id/main_buy_title"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:background="@drawable/shouye_top">
		<TextView android:text="" android:id="@+id/join_hall_text_title"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:textColor="@color/white" android:paddingLeft="10dip"
			android:textSize="20dip" android:layout_alignParentLeft="true"
			android:layout_centerVertical="true"></TextView>
		<Button android:id="@+id/join_hall_img_return"
			android:layout_width="80dip" android:layout_height="30dip"
			android:layout_alignParentRight="true" android:layout_marginRight="10dip"
			android:layout_centerVertical="true" android:text="返回大厅"
			android:textColor="@color/white" android:textSize="15dip">
		</Button>
	</RelativeLayout>
	<RelativeLayout android:id="@+id/RelativeLayout01"
		android:layout_width="fill_parent" android:layout_height="fill_parent" android:paddingTop="8dip">
		<ScrollView android:fadingEdge="none"
			android:scrollingCache="false" android:layout_height="fill_parent"
			android:layout_width="fill_parent" android:layout_marginBottom="60dip"
			android:scrollbars="none" android:layout_marginLeft="8dip" android:layout_marginRight="5dip">
			<LinearLayout android:layout_height="wrap_content"
				android:layout_width="fill_parent" android:id="@+id/join_hall_linear_views"
				android:orientation="vertical">
			</LinearLayout>
		</ScrollView>
		<LinearLayout android:id="@+id/LinearLayout01"
			android:layout_width="fill_parent" android:layout_height="60dip"
			android:background="@drawable/buy_bot_bg" android:gravity="center_horizontal"
			android:layout_alignParentBottom="true">
			<ImageButton android:id="@+id/join_hall_img_join"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:src="@drawable/join_selector" android:background="#00000000"
				android:layout_gravity="center_vertical"></ImageButton>
		</LinearLayout>
	</RelativeLayout>
	
</LinearLayout>
