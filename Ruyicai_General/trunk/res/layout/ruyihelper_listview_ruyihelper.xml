<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" 
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	>
	
	<LinearLayout
	android:orientation="horizontal"
	android:gravity="left"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	
	<ImageView 
				android:id="@+id/ruyizhushou_btn_return"
				android:background="#00000000"
				android:src="@drawable/return_btn"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignParentLeft="true"
			/>
	<TextView 
				android:id="@+id/ruyipackage_title"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:gravity="center"
				android:textAppearance="?android:attr/textAppearanceMedium"
			    android:typeface="serif"
				android:text="@string/ruyizhushou"
				android:textColor="#000000"
				android:layout_marginRight="10px"
			/>	
	

	</LinearLayout>
	
	<ListView 
		android:id="@+id/ruyihelper_listview_ruyihelper_id"
		android:cacheColorHint="#00000000"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		>
	</ListView>
	<LinearLayout 
		android:id="@+id/ruyihelper_linear"
		android:orientation="vertical" 
		android:gravity="center"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent">
		<TextView 
			android:id="@+id/ruyihelper_serviceWebsite"
			android:textColor="@color/black"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/ruyihelper_serviceWebsite"
			android:autoLink="all"/>
		<TextView 
			android:id="@+id/ruyihelper_customerServicePhone"
			android:textColor="@color/black"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:gravity="left"
			android:text="@string/ruyihelper_customerServicePhone"
			android:autoLink="all"/>
	</LinearLayout>
</LinearLayout>