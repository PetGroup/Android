<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="wrap_content">

	<LinearLayout android:orientation="horizontal"
		      android:layout_width="fill_parent"
  		      android:layout_height="wrap_content">
  		      
  		<!-- 周黎鸣7.3将Button换成ImageButton -->      
		<ImageButton android:id="@+id/expert_analyze_return_id"
			     android:src="@drawable/return_btn"
			     android:background="#00000000"
	 		     android:layout_width="wrap_content" 
			     android:layout_height="wrap_content"
	 		     />
	 		
	 	<TextView 
			android:text="@string/zhuanjiafenxi" 
			android:id="@+id/expert_analyze_title_id"
			android:textColor="@color/black" 
			android:textAppearance="?android:attr/textAppearanceMedium"
		        android:typeface="serif"
		        android:gravity="center"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent">
		</TextView>
		
 	</LinearLayout>	
 	
	<ListView 
		android:id="@+id/expert_analyze_listview_id" 
		android:cacheColorHint="#00000000"
		android:layout_width="fill_parent" 
		android:layout_height="wrap_content">
	</ListView>	

</LinearLayout>
