<?xml version="1.0" encoding="utf-8"?>

<LinearLayout 
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent">
   <LinearLayout android:orientation="vertical"
	style="@style/upomp_lthj_layout_width_height_fw" android:paddingLeft="@dimen/upomp_lthj_tableLayout_pad_left" android:paddingRight="@dimen/upomp_lthj_tableLayout_pad_right" 
				android:paddingTop="@dimen/upomp_lthj_tableLayout_pad_top" android:paddingBottom="@dimen/upomp_lthj_tableLayout_pad_bottom">
   <TableLayout android:orientation="horizontal" style="@style/upomp_lthj_layout_width_height_fw"
		android:stretchColumns="1" android:background="@drawable/upomp_lthj_corner_round_all" android:padding="1.0dip"
		>
		<TableRow style="@style/upomp_lthj_tablerow" android:background="@drawable/upomp_lthj_corner_round_top_white">
			<TextView android:text="@string/upomp_lthj_register_name" style="@style/upomp_lthj_textView_title"/>
			<EditText android:id="@id/upomp_lthj_login_edittext" style="@style/upomp_lthj_editTextLeft" 
				android:hint="@string/upomp_lthj_username_hint" android:maxLength="20"/>
			<Button android:id="@id/upomp_lthj_user_repeat_textview" android:text="@string/upomp_lthj_user_repeat" android:textColor="@drawable/upomp_lthj_black" style="@style/upomp_lthj_layout_width_height_ww"
				/>
		</TableRow>
		<View android:layout_width="fill_parent" android:layout_height="0.5dip" android:background="@drawable/upomp_lthj_gray"/>
		<TableRow style="@style/upomp_lthj_tablerow" android:background="@drawable/upomp_lthj_corner_round_while">
			<TextView android:text="@string/upomp_lthj_register_password" style="@style/upomp_lthj_textView_title"/>
			<EditText android:id="@id/upomp_lthj_password_edittext" style="@style/upomp_lthj_editTextLeft"  android:layout_span="2"
				android:hint="@string/upomp_lthj_password_hint"  android:editable="false"/>
		</TableRow>
		<View android:layout_width="fill_parent" android:layout_height="0.5dip" android:background="@drawable/upomp_lthj_gray"/>
		<TableRow style="@style/upomp_lthj_tablerow" android:background="@drawable/upomp_lthj_corner_round_while">
			<TextView android:text="@string/upomp_lthj_recheck_password" style="@style/upomp_lthj_textView_title"/>
			<EditText android:id="@id/upomp_lthj_password_edittext_rewrite" style="@style/upomp_lthj_editTextLeft"  android:layout_span="2"
				android:hint="@string/upomp_lthj_password_hint"  android:editable="false"/>
		</TableRow>
		<View android:layout_width="fill_parent" android:layout_height="0.5dip" android:background="@drawable/upomp_lthj_gray"/>
		<TableRow style="@style/upomp_lthj_tablerow" android:background="@drawable/upomp_lthj_corner_round_bottom">
			<TextView android:text="@string/upomp_lthj_email" style="@style/upomp_lthj_textView_title"/>
			<EditText android:id="@id/upomp_lthj_email_edittext" style="@style/upomp_lthj_editTextLeft"  android:layout_span="2"
				android:hint="@string/upomp_lthj_email"/>
		</TableRow>
	</TableLayout>
	<TableLayout android:orientation="vertical" style="@style/upomp_lthj_layout_width_height_fw" android:layout_marginTop="@dimen/upomp_lthj_tableLayout_pad_top"
		android:stretchColumns="1" android:background="@drawable/upomp_lthj_corner_round_all" android:padding="1.0dip"
		>
		<TableRow style="@style/upomp_lthj_tablerow" android:background="@drawable/upomp_lthj_corner_round_top_white">
			<TextView  android:text="@string/upomp_lthj_validateCode" style="@style/upomp_lthj_textView_title"/>
			<EditText android:id="@id/upomp_lthj_validateCodeEditText" style="@style/upomp_lthj_editTextLeft" android:numeric="integer" android:inputType="phone"
				 android:maxLength="4"/>
			<LinearLayout android:layout_width="@dimen/upomp_lthj_imgViewCheck_width" android:layout_height="@dimen/upomp_lthj_imgViewCheck_height" android:gravity="center_vertical">
				<ImageView android:id="@id/upomp_lthj_imgview_checkword" android:layout_marginLeft="@dimen/upomp_lthj_view_gap_horizontal" android:layout_width="@dimen/upomp_lthj_imgViewCheck_width" android:layout_height="@dimen/upomp_lthj_imgViewCheck_height"
					android:visibility="gone"/>
				<ProgressBar android:id="@id/upomp_lthj_progress"
			        android:layout_marginLeft="@dimen/upomp_lthj_view_gap_horizontal"
			        android:layout_width="@dimen/upomp_lthj_progressBar_size"
			        android:layout_height="@dimen/upomp_lthj_progressBar_size" android:indeterminateDrawable="@drawable/upomp_lthj_progressbar"/>
			</LinearLayout>
		</TableRow>
		<View android:layout_width="fill_parent" android:layout_height="0.5dip" android:background="@drawable/upomp_lthj_gray"/>
		<TableRow style="@style/upomp_lthj_tablerow" android:background="@drawable/upomp_lthj_corner_round_while">
			<TextView android:text="@string/upomp_lthj_welcome_word" style="@style/upomp_lthj_textView_title"/>
			<EditText android:id="@id/upomp_lthj_welcome_word_edittext" style="@style/upomp_lthj_editTextLeft"  android:layout_span="2"
				android:hint="2-16位字符组合" android:maxLength="16"/>
		</TableRow>
		<View android:layout_width="fill_parent" android:layout_height="0.5dip" android:background="@drawable/upomp_lthj_gray"/>
		<TableRow style="@style/upomp_lthj_tablerow" android:background="@drawable/upomp_lthj_corner_round_while">
			<TextView android:text="@string/upomp_lthj_safe_ask" style="@style/upomp_lthj_textView_title"
				android:layout_gravity="center_vertical"/>
			<LinearLayout android:orientation="horizontal" style="@style/upomp_lthj_layout_width_height_fw" android:layout_span="2"
				 android:layout_weight="1.0">
				<EditText  android:id="@id/upomp_lthj_spinner_askedittext" style="@style/upomp_lthj_editTextLeft"
					android:hint="设置安全提示问题"/>
				<Button android:id="@id/upomp_lthj_spinner_askbutton" android:background="@drawable/upomp_lthj_add"
				 android:layout_width="wrap_content" android:layout_height="wrap_content" android:gravity="center"/>
			</LinearLayout>
		</TableRow>
		<View android:layout_width="fill_parent" android:layout_height="0.5dip" android:background="@drawable/upomp_lthj_gray"/>
		<TableRow style="@style/upomp_lthj_tablerow" android:background="@drawable/upomp_lthj_corner_round_bottom">
			<TextView android:text="@string/upomp_lthj_safe_answer" style="@style/upomp_lthj_layout_width_height_ww" 
				android:gravity="left|center_vertical"
    			android:textColor="@drawable/upomp_lthj_black"
    			android:layout_marginRight="@dimen/upomp_lthj_textview_margin_right"
				/>
			<EditText android:id="@id/upomp_lthj_edit_safe_answer" style="@style/upomp_lthj_editTextLeft"  android:layout_span="2"
				android:hint="2-16位字符组合" android:maxLength="16" />
		</TableRow>
	</TableLayout>
	<TableLayout android:orientation="horizontal" style="@style/upomp_lthj_layout_width_height_fw"  android:layout_marginTop="@dimen/upomp_lthj_tableLayout_pad_top" android:layout_marginBottom="@dimen/upomp_lthj_tableLayout_pad_bottom"
		android:stretchColumns="1" android:background="@drawable/upomp_lthj_corner_round_all" android:padding="1.0dip"
		>
		<TableRow style="@style/upomp_lthj_tablerow" android:background="@drawable/upomp_lthj_corner_round_top_white">
			<TextView android:text="@string/upomp_lthj_phone_num" style="@style/upomp_lthj_textView_title"/>
			<EditText android:id="@id/upomp_lthj_mobileNumEditText" style="@style/upomp_lthj_editTextLeft"  android:layout_span="2" android:maxLength="11"
				android:hint="@string/upomp_lthj_phone_num"  android:editable="false"/>
		</TableRow>
		<TableRow style="@style/upomp_lthj_layout_width_height_fw"  android:background="@drawable/upomp_lthj_smsbtn"
			android:gravity="center">
			<RelativeLayout style ="@style/upomp_lthj_layout_width_height_fw"  android:layout_span="2">
			<Button  android:id="@id/upomp_lthj_mobileMacButton" android:text="点击获取短信验证码" 
				android:layout_span="3" android:layout_weight="1.0" android:layout_width="fill_parent" 
					android:layout_height="wrap_content" android:gravity="center" android:textColor="@drawable/upomp_lthj_white"
					android:layout_centerInParent="true"/>
			<ProgressBar android:id="@id/upomp_lthj_progressMobileMac" android:visibility="gone"
			        android:layout_marginLeft="@dimen/upomp_lthj_view_gap_horizontal"
			        android:layout_width="@dimen/upomp_lthj_progressBar_size"
			        android:layout_height="@dimen/upomp_lthj_progressBar_size"
			        android:layout_alignParentLeft="true"/>
			</RelativeLayout>
		</TableRow>
		<TableRow style="@style/upomp_lthj_tablerow" android:background="@drawable/upomp_lthj_corner_round_bottom">
			<TextView  android:text="@string/upomp_lthj_message_checknum" style="@style/upomp_lthj_textView_title"/>
			<EditText android:id="@id/upomp_lthj_mobileMacEditText" android:hint="@string/upomp_lthj_mobileMac_hint" style="@style/upomp_lthj_editTextLeft" android:layout_span="2" 
				android:maxLength="6"  android:editable="false"/>
		</TableRow>
	</TableLayout>
	<LinearLayout style="@style/upomp_lthj_layout_width_height_fw" android:orientation="horizontal" android:gravity="center">
		<CheckBox android:id="@id/upomp_lthj_checkBox_agreedeal" android:text="@string/upomp_lthj_agreedeal"  android:textColor="@drawable/upomp_lthj_blue" android:gravity="right|center_vertical" android:checked="true"  android:layout_width="wrap_content" android:layout_height="wrap_content"></CheckBox>
		<TextView android:text="@string/upomp_lthj_finddeal" android:id="@id/upomp_lthj_textView_finddeal"  android:gravity="left" android:textColor="@drawable/upomp_lthj_blue"  android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:textSize="16.0dip"></TextView>       
	</LinearLayout>    
	<LinearLayout style="@style/upomp_lthj_layout_width_height_fw"  android:gravity="center_horizontal" android:orientation="vertical">
		<Button android:id="@id/upomp_lthj_register_button" android:background="@drawable/upomp_lthj_ok" style="@style/upomp_lthj_button_single" android:layout_marginTop="@dimen/upomp_lthj_view_gap_horizontal" android:text="@string/upomp_lthj_main_register" android:textColor="@drawable/upomp_lthj_white" />
	</LinearLayout>
	</LinearLayout>
</LinearLayout>

