	<LinearLayout android:background="@drawable/upomp_lthj_corner_round_all"
		android:orientation="vertical" android:layout_marginTop="@dimen/upomp_lthj_prompt_hint_margin_top"
		android:paddingLeft="@dimen/upomp_lthj_prompt_hint_margin_left"
		android:paddingRight="@dimen/upomp_lthj_prompt_hint_margin_right"
		android:paddingBottom="@dimen/upomp_lthj_prompt_hint_margin_bottom"
		style="@style/upomp_lthj_layout_width_height_fw">
		<ImageView android:src="@drawable/upomp_lthj_friend_tip"
			style="@style/upomp_lthj_layout_width_height_ww" />
		"
		<TextView style="@style/upomp_lthj_layout_width_height_ww"
			android:text="@string/upomp_lthj_changephonenum_prompt"
			android:textColor="@android:color/darker_gray" />
	</LinearLayout>

	<LinearLayout style ="@style/upomp_lthj_layout_width_height_fw" android:paddingTop="@dimen/upomp_lthj_buttons_tab_pad_top"
		android:orientation="horizontal"  android:gravity="center_vertical">
		<Button style="@style/upomp_lthj_button_twice" android:id="@id/upomp_lthj_button_titleregistermessage"
			android:layout_weight="1.0" android:textColor="@drawable/upomp_lthj_gray"
			android:background="@drawable/upomp_lthj_cancel" android:text="返回我的信息" />
		<Button style="@style/upomp_lthj_button_twice" android:id="@id/upomp_lthj_changephonenum_button"
			android:layout_marginLeft="10.0dip" android:layout_weight="1.0"
			android:textColor="@drawable/upomp_lthj_white" android:background="@drawable/upomp_lthj_ok"
			android:text="@string/upomp_lthj_verify" />
	</LinearLayout>

</LinearLayout>
