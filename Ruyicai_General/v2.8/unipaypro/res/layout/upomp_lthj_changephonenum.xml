<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<TableLayout android:orientation="horizontal"
		style="@style/upomp_lthj_layout_width_height_fw" android:gravity="center"
		android:stretchColumns="1" android:background="@drawable/upomp_lthj_corner_round_all"
		android:padding="1.0dip">
		<TableRow style="@style/upomp_lthj_tablerow" android:gravity="center_vertical" 
			android:background="@drawable/upomp_lthj_corner_round_top_blue">
			<TextView android:id="@id/upomp_lthj_wecome_textview"
				style="@style/upomp_lthj_layout_width_height_fw" android:text="@string/upomp_lthj_trade_title"
				android:gravity="center_vertical" android:textColor="#ffffff"
				android:layout_span="3" android:layout_weight="1.0" android:textSize="@dimen/upomp_lthj_textview_font_size"/>
		</TableRow>
		<View android:layout_width="fill_parent" android:layout_height="0.5dip"
			android:background="@drawable/upomp_lthj_gray" />
		<TableRow android:gravity="center_vertical" android:background="@drawable/upomp_lthj_corner_round_while"
			style="@style/upomp_lthj_tablerow">
			<TextView android:text="@string/upomp_lthj_register_name"
				style="@style/upomp_lthj_textView_title" />
			<TextView android:id="@id/upomp_lthj_register_name_textview"
				android:text="" android:layout_marginLeft="@dimen/upomp_lthj_tableLayout_pad_left"
				style="@style/upomp_lthj_textView_title_left" android:layout_span="2" />
		</TableRow>
		<View android:layout_width="fill_parent" android:layout_height="0.5dip" android:background="@drawable/upomp_lthj_gray"/>
			<TableRow style="@style/upomp_lthj_tablerow" android:background="@drawable/upomp_lthj_corner_round_while">
				<TextView android:text="@string/upomp_lthj_register_password" style="@style/upomp_lthj_textView_title"/>
				<EditText android:id="@id/upomp_lthj_password_edittext" style="@style/upomp_lthj_editTextLeft" 
					android:hint="@string/upomp_lthj_password_hint" android:editable="false"  
				    android:layout_span="2"/>
			</TableRow>
		<View android:layout_width="fill_parent" android:layout_height="0.5dip"
			android:background="@drawable/upomp_lthj_gray" />
		<TableRow android:gravity="center_vertical"  android:background="@drawable/upomp_lthj_corner_round"
			style="@style/upomp_lthj_tablerow">
			<TextView android:text="已注册手机号码" android:layout_gravity="center_vertical"
				style="@style/upomp_lthj_textView_title" />
			<TextView android:id="@id/upomp_lthj_phonenum_textview"
				style="@style/upomp_lthj_textView_title_left" android:layout_span="2"
				android:layout_marginLeft="@dimen/upomp_lthj_tableLayout_pad_left" />
		</TableRow>
		<View android:layout_width="fill_parent" android:layout_height="0.5dip"
			android:background="@drawable/upomp_lthj_gray" />
		<TableRow android:gravity="center_vertical"  android:background="@drawable/upomp_lthj_corner_round_while"
			style="@style/upomp_lthj_tablerow">
			<TextView android:text="@string/upomp_lthj_oldphonenum"
				style="@style/upomp_lthj_textView_title" />
			<EditText android:id="@id/upomp_lthj_oldphonenum_edittext"
				style="@style/upomp_lthj_editTextLeft" android:layout_span="2"
				 android:maxLength="11" android:hint="原手机号" 
				  android:editable="false"/>
		</TableRow>
		<View android:layout_width="fill_parent" android:layout_height="0.5dip"
			android:background="@drawable/upomp_lthj_gray" />
		<TableRow android:gravity="center_vertical" android:id="@id/upomp_lthj_pinTableRow"  android:background="@drawable/upomp_lthj_corner_round_while"
			style="@style/upomp_lthj_tablerow">
			<TextView android:text="@string/upomp_lthj_newphonenum"
				style="@style/upomp_lthj_textView_title" />
			<EditText android:id="@id/upomp_lthj_newphonenum_edittext"
				style="@style/upomp_lthj_editTextLeft" android:layout_span="2"
				 android:maxLength="11" android:hint="新手机号" 
				  android:editable="false"/>
		</TableRow>
		<TableRow style="@style/upomp_lthj_layout_width_height_fw"  android:background="@drawable/upomp_lthj_smsbtn"
			android:gravity="center">
			<RelativeLayout style ="@style/upomp_lthj_layout_width_height_fw"  android:layout_span="2">
			<Button  android:id="@id/upomp_lthj_mobileMacButton" android:text="点击获取短信验证码" 
				android:layout_span="3" android:layout_weight="1.0" android:layout_width="fill_parent" 
					android:layout_height="wrap_content" android:gravity="center" android:textColor="@drawable/upomp_lthj_white"
					android:layout_centerInParent="true"/>
			<ProgressBar android:id="@id/upomp_lthj_progressMobileMac" android:visibility="gone"
			        android:layout_marginLeft="@dimen/upomp_lthj_view_gap_horizontal"
			        android:layout_width="@dimen/upomp_lthj_progressBar_size"
			        android:layout_height="@dimen/upomp_lthj_progressBar_size"
			        android:layout_alignParentLeft="true"/>
			</RelativeLayout>
		</TableRow>
		<TableRow android:gravity="center_vertical"  android:background="@drawable/upomp_lthj_corner_round_bottom"
			style="@style/upomp_lthj_tablerow">
			<TextView android:text="@string/upomp_lthj_message_checknum"
				style="@style/upomp_lthj_textView_title" />
			<EditText android:id="@id/upomp_lthj_mobileMacEditText"
				android:hint="@string/upomp_lthj_mobileMac_hint" style="@style/upomp_lthj_editTextLeft"
				 android:maxLength="6"  android:editable="false"/>
		</TableRow>
	</TableLayout>

