<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:background="@color/list_color">
	<ListView android:id="@+id/account_rechange_listview"
		android:footerDividersEnabled="false" android:background="@color/list_color"
		android:cacheColorHint="#00000000" android:layout_width="fill_parent"
		android:layout_height="320dip">
	</ListView>
	<ScrollView android:layout_height="wrap_content" android:animationCache="true"
		android:layout_width="fill_parent">
		<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			android:orientation="vertical" android:layout_width="fill_parent"
			android:paddingLeft="20dip" android:paddingRight="20dip"
			android:layout_height="fill_parent" android:background="@color/list_color">
			<TextView android:layout_width="fill_parent" android:gravity="center_horizontal"
				android:layout_height="wrap_content" android:text="@string/computer_rechargeinfo"
				android:textColor="@color/black"
				android:textSize="15sp"></TextView>
			<TextView android:gravity="center_horizontal"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:text="@string/computer_address" android:paddingBottom="5dip" android:autoLink="web"
				android:textColor="@color/black" android:textSize="16sp"></TextView>
		</LinearLayout>
	</ScrollView>
</LinearLayout>