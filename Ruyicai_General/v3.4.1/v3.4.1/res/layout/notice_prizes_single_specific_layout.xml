<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="75dp"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/notice_pirzes_single_specific_ball_linearlayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:gravity="center"
            android:orientation="horizontal" >
        </LinearLayout>

        <!-- zlm 8.5 code modify -->

        <RelativeLayout
            android:id="@+id/notice_pirzes_single_specific_finaldateandmoneysum_linearlayout"
            android:layout_width="wrap_content"
            android:layout_height="5dip"
            android:layout_below="@id/notice_pirzes_single_specific_ball_linearlayout" >

            <TextView
                android:id="@+id/notice_prizes_single_specific_finalPrizesDate_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="3dip"
                android:textColor="@color/black"
                android:textSize="14dip" >
            </TextView>

            <TextView
                android:id="@+id/notice_prizes_single_specific_totalSum_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textColor="@color/black"
                android:textSize="14dip" >
            </TextView>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/notice_pirzes_single_specific_noticedateandissue_linearlayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/notice_pirzes_single_specific_finaldateandmoneysum_linearlayout" >

            <TextView
                android:id="@+id/notice_prizes_single_specific_noticedDate_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10dip"
                android:textColor="@color/black"
                android:textSize="14dip" >
            </TextView>

            <TextView
                android:id="@+id/notice_prizes_single_specific_issue_id"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textColor="@color/black"
                android:textSize="14dip" >
            </TextView>
        </RelativeLayout>

        <ImageView
            android:id="@+id/notice_prizes_single_specific_img"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/usercenter_ico_triangle" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:background="@drawable/litt" >
    </LinearLayout>

</LinearLayout>