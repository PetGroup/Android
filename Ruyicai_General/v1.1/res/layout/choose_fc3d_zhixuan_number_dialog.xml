<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="300px"
  android:layout_height="wrap_content"
  android:orientation="vertical">
  		 <TextView android:id="@+id/tv_zhixuan_dialog_tips"
        		android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/zhixuan_danshi_dialog_tips"
        />
        
        
        <LinearLayout android:orientation="vertical"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content">
                                    
                                    
                <TextView android:id="@+id/tv_zhixuan_baiwei"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/baiwei"
                android:layout_marginRight="10dip"
                />
              
                        <RelativeLayout
                  		  android:id="@+id/fc3d_jixuan_layout"
                  		  android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          >           
                                
                        <TextView android:id="@+id/tv_zhixuan_baiwei_number"
                              android:layout_width="30px"
                              android:layout_height="wrap_content"
                              android:layout_marginLeft="10dip"
                              android:layout_marginRight="5dip"
                              android:textColor="#ff0000" 
                              android:layout_alignParentLeft="true"
                              android:textSize="20px"
                          />
                                  
                            <ImageButton 
                            	android:id="@+id/zhixuan_baiwei_subtract"
                            	android:layout_width="wrap_content"
                            	android:layout_height="wrap_content"
                            	android:src="@drawable/subtract11"
                            	android:layout_toRightOf="@+id/tv_zhixuan_baiwei_number"
                            	android:background="#00000000"
                                  	
                                  /> 
                                
                                
                                  <SeekBar android:id="@+id/seek_zhixuan_baiwei"
                                          style="?android:attr/progressBarStyleHorizontal"
                                          android:progressDrawable="@drawable/seekbar_style"  
                                          android:thumb="@drawable/thumb"
                                          android:max="10"
                                          android:progress="1"
                                          android:layout_width="180px"
                                          android:layout_height="23dip"
                                          android:paddingLeft="15dip"
                                          android:paddingRight="15dip"
                                          android:paddingBottom="4dip" 
                                          android:layout_toRightOf="@+id/zhixuan_baiwei_subtract"

                                          />
                                    
                                   <ImageButton 
                                   	android:id="@+id/zhixuan_baiwei_add"
                                   	android:layout_width="wrap_content"
                                   	android:layout_height="wrap_content"
                                   	android:src="@drawable/add11"
                                   	android:layout_toRightOf="@+id/seek_zhixuan_baiwei"
                                   	android:background="#00000000"
                                   	android:layout_marginRight="10dip"                                          
                                   />
                                   
                                 </RelativeLayout>
                                
                                 
                         </LinearLayout>
     
         <LinearLayout android:orientation="vertical"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content">
                                    
                                    
                <TextView android:id="@+id/tv_zhixuan_shiwei"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/shiwei"
                android:layout_marginRight="10dip"
                />
              
                        <RelativeLayout
                  		  android:id="@+id/fc3d_jixuan_layout"
                  		  android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          >           
                                
                        <TextView android:id="@+id/tv_zhixuan_shiwei_number"
                              android:layout_width="30px"
                              android:layout_height="wrap_content"
                              android:layout_marginLeft="10dip"
                              android:layout_marginRight="5dip"
                              android:textColor="#ff0000" 
                              android:layout_alignParentLeft="true"
                              android:textSize="20px"
                          />
                                  
                            <ImageButton 
                            	android:id="@+id/zhixuan_shiwei_subtract"
                            	android:layout_width="wrap_content"
                            	android:layout_height="wrap_content"
                            	android:src="@drawable/subtract11"
                            	android:layout_toRightOf="@+id/tv_zhixuan_shiwei_number"
                            	android:background="#00000000"
                                  	
                                  /> 
                                
                                
                                  <SeekBar android:id="@+id/seek_zhixuan_shiwei"
                                          style="?android:attr/progressBarStyleHorizontal"
                                          android:progressDrawable="@drawable/seekbar_style"  
                                          android:thumb="@drawable/thumb"
                                          android:max="10"
                                          android:progress="1"
                                          android:layout_width="180px"
                                          android:layout_height="23dip"
                                          android:paddingLeft="15dip"
                                          android:paddingRight="15dip"
                                          android:paddingBottom="4dip" 
                                          android:layout_toRightOf="@+id/zhixuan_shiwei_subtract"

                                          />
                                    
                                   <ImageButton 
                                   	android:id="@+id/zhixuan_shiwei_add"
                                   	android:layout_width="wrap_content"
                                   	android:layout_height="wrap_content"
                                   	android:src="@drawable/add11"
                                   	android:layout_toRightOf="@+id/seek_zhixuan_shiwei"
                                   	android:background="#00000000"
                                   	android:layout_marginRight="10dip"                                          
                                   />
                                   
                                 </RelativeLayout>
                                
                                 
                         </LinearLayout>
     
         <LinearLayout android:orientation="vertical"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content">
                                    
                                    
                <TextView android:id="@+id/tv_zhixuan_gewei"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/gewei"
                android:layout_marginRight="10dip"
                />
              
                        <RelativeLayout
                  		  android:id="@+id/fc3d_jixuan_layout"
                  		  android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          >           
                                
                        <TextView android:id="@+id/tv_zhixuan_gewei_number"
                              android:layout_width="30px"
                              android:layout_height="wrap_content"
                              android:layout_marginLeft="10dip"
                              android:layout_marginRight="5dip"
                              android:textColor="#ff0000" 
                              android:layout_alignParentLeft="true"
                              android:textSize="20px"
                          />
                                  
                            <ImageButton 
                            	android:id="@+id/zhixuan_gewei_subtract"
                            	android:layout_width="wrap_content"
                            	android:layout_height="wrap_content"
                            	android:src="@drawable/subtract11"
                            	android:layout_toRightOf="@+id/tv_zhixuan_gewei_number"
                            	android:background="#00000000"
                                  	
                                  /> 
                                
                                
                                  <SeekBar android:id="@+id/seek_zhixuan_gewei"
                                          style="?android:attr/progressBarStyleHorizontal"
                                          android:progressDrawable="@drawable/seekbar_style"  
                                          android:thumb="@drawable/thumb"
                                          android:max="10"
                                          android:progress="1"
                                          android:layout_width="180px"
                                          android:layout_height="23dip"
                                          android:paddingLeft="15dip"
                                          android:paddingRight="15dip"
                                          android:paddingBottom="4dip" 
                                          android:layout_toRightOf="@+id/zhixuan_gewei_subtract"

                                          />
                                    
                                   <ImageButton 
                                   	android:id="@+id/zhixuan_gewei_add"
                                   	android:layout_width="wrap_content"
                                   	android:layout_height="wrap_content"
                                   	android:src="@drawable/add11"
                                   	android:layout_toRightOf="@+id/seek_zhixuan_gewei"
                                   	android:background="#00000000"
                                   	android:layout_marginRight="10dip"                                          
                                   />
                                   
                                 </RelativeLayout>
                                
                                 
                         </LinearLayout>
        
	<LinearLayout
	android:id="@+id/buttonLayout"
	android:layout_width="fill_parent"
	android:paddingTop="10px"
	android:layout_height="wrap_content"
	android:weightSum="2"
	android:orientation="horizontal">
		<Button
		android:id="@+id/zhixuan_okButton"
		android:layout_width="fill_parent"
		android:layout_weight="1"
		android:layout_height="wrap_content"
		android:text="@string/confirm"></Button>
		<Button
		android:id="@+id/zhixuan_cancelButton"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_weight="1"
		android:text="@string/cancel"></Button>
     </LinearLayout>
</LinearLayout>
