<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="wrap_content">
	<ImageView 
		android:id="@+id/icon" 
		android:layout_alignParentLeft="true"
		android:layout_marginTop="6dip"
		android:layout_marginBottom="5dip"
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content">
	</ImageView>
	
	<!-- zlm 7.14 code modify:layout modify -->
	<RelativeLayout android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_toRightOf="@+id/icon"
			android:id="@+id/buyLotteryMainList_lotteryName_relativelayout_id">
		<TextView 
			android:textColor="@color/black"
			android:layout_marginTop="8dip"
			android:layout_marginLeft="10dip"
			android:layout_marginRight="50dip"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:typeface="serif"
			android:id="@+id/buyLotteryMainList_lotteryName_id" 
			android:layout_width="fill_parent" 
			android:layout_height="fill_parent">
		</TextView>
		
		<TextView
			android:layout_alignParentRight="true"
			android:layout_below="@+id/buyLotteryMainList_lotteryName_id"
			android:textColor="@color/black"
			android:layout_marginTop="5dip"
			android:id="@+id/buyLotteryMainList_lotteryIssue_id" 
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content">
		</TextView>
	</RelativeLayout>
</RelativeLayout>
