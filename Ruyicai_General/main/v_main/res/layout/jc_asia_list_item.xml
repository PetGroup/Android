<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="60dip"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dip"
        android:layout_weight="1"
        android:background="@color/white" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.1"
            android:background="@color/white" >

            <TextView
                android:id="@id/jc_europe_list_item_text_company"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="13dip" />

            <View
                android:layout_width="1dip"
                android:layout_height="match_parent"
                android:background="@color/zc_sfc_divider" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="初盘"
                    android:textColor="@color/black"
                    android:textSize="13dip" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:background="@color/zc_sfc_divider" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="即时盘"
                    android:textColor="@color/black"
                    android:textSize="13dip" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="2dip"
            android:layout_height="match_parent"
            android:background="@color/zc_sfc_divider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.4"
            android:orientation="vertical" >

            <TextView
                android:id="@id/jc_europe_list_item_text_center_win"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="13dip" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="@color/zc_sfc_divider" />
            
            <TextView
                android:id="@id/jc_europe_list_item_text_right_win"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="13dip" />

        </LinearLayout>

        <View
            android:layout_width="2dip"
            android:layout_height="match_parent"
            android:background="@color/zc_sfc_divider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.3"
            android:orientation="vertical" >

            <TextView
                android:id="@id/jc_europe_list_item_text_center_leve"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="13dip" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="@color/zc_sfc_divider" />

            <TextView
                android:id="@id/jc_europe_list_item_text_right_leve"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="13dip" />
        </LinearLayout>

        <View
            android:layout_width="2dip"
            android:layout_height="match_parent"
            android:background="@color/zc_sfc_divider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.4"
            android:orientation="vertical" >

            <TextView
                android:id="@id/jc_europe_list_item_text_center_fail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="13dip" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="@color/zc_sfc_divider" />

            <TextView
                android:id="@id/jc_europe_list_item_text_right_fail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="13dip" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white" >

        <LinearLayout
            android:layout_width="40dip"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone" >

            <TextView
                android:id="@id/jc_europe_list_item_text_left_win"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="13dip" />

            <TextView
                android:id="@id/jc_europe_list_item_text_left_leve"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="13dip" />

            <TextView
                android:id="@id/jc_europe_list_item_text_left_fail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="13dip" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>