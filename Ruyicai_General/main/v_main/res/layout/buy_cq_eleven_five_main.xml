<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/topLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
        
        

        <RelativeLayout
            android:id="@+id/main_buy_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/nmk3_head_bg" >

            <TextView
                android:id="@+id/layout_main_text_title_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/chongqing_toubu_down"
                android:gravity="center_horizontal"
                android:paddingLeft="10dip"
                android:text="Title"
                android:textColor="@color/white"
                android:textSize="16sp" >
            </TextView>

            <Button
                android:id="@+id/refresh_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="45dip"
                android:background="@drawable/refresh_last_code"
                android:textColor="@color/white"
                android:textSize="15dip"
                android:visibility="gone" >
            </Button>

            <Button
                android:id="@+id/layout_main_img_return"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dip"
                android:background="@drawable/buy_group_top_icon"
                android:textColor="@color/white"
                android:textSize="15dip"
                android:visibility="gone" >
            </Button>
        </RelativeLayout>
        
        <View 
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@drawable/toubu_caizhongshaixuan" />

        <RelativeLayout
            android:id="@+id/last_batchcode"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:background="@drawable/nmk3_head_bg"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/yaoyao_jisuan"
                android:layout_width="wrap_content"
                android:layout_height="26dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:background="@drawable/nmk3_jixuan"
                android:paddingLeft="3dip"
                android:paddingRight="3dip">
            </Button>

            <TextView
                android:id="@+id/last_batchcode_textlable_red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="3dp"
                android:layout_toRightOf="@+id/yaoyao_jisuan"
                android:text="至少选择2个号码"
                android:textColor="@color/white"
                android:layout_toLeftOf="@+id/layout_main_text_time"
                android:textSize="13sp"
                android:visibility="gone" >
            </TextView>

            <TextView
                android:id="@+id/layout_main_text_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingRight="5dip"
                android:text="距离06期截至:3分13秒"
                android:textColor="@color/white"
                android:textSize="13sp" >
            </TextView>
        </RelativeLayout>
        <!-- 显示投注信息 -->

        <RelativeLayout
            android:id="@+id/touzhu"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:orientation="horizontal"
            android:paddingBottom="2.6dip"
            android:paddingTop="2.6dip" >

            <TextView
                android:id="@+id/bet_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:paddingLeft="10dip"
                android:text="猜中开奖的任意2个号码即奖9元"
                android:textColor="@color/cq_11_5_text_color"
                android:layout_toLeftOf="@+id/missTxt"
                android:textSize="14sp" >
            </TextView>

            <TextView
                android:id="@+id/missTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="4.0dip"
                android:layout_toLeftOf="@+id/missCheck"
                android:text="遗漏"
                android:textColor="@color/cq_11_5_text_color"
                android:textSize="14sp" >
            </TextView>

            <CheckBox
                android:id="@+id/missCheck"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="4.0dip"
                android:button="@drawable/chongqing_yilou_selector" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/sscchildtype"
            android:layout_width="fill_parent"
            android:layout_height="1.0dip"
            android:background="@drawable/nmk3_head_bg"
            android:orientation="horizontal" >
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/buyview"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/topLayout" >
    </LinearLayout>

</RelativeLayout>
