<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/main_buy_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shouye_top" >

        <TextView
            android:id="@+id/layout_main_text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:paddingLeft="10dip"
            android:text="@string/jc_main_score"
            android:textColor="@color/white"
            android:textSize="20dip" >
        </TextView>

        <Button
            android:id="@+id/layout_main_img_return"
            android:layout_width="70dip"
            android:layout_height="30dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dip"
            android:background="@drawable/returnselecter"
            android:gravity="center_vertical|center_horizontal"
            android:text="返回"
            android:textColor="@color/white"
            android:textSize="15dip" >
        </Button>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/main_score_layout_top"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/main_buy_title"
        android:background="@drawable/jc_score_list_bg"
        android:paddingBottom="5dip"
        android:paddingTop="5dip" >

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="130dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="5dip" >

            <TextView
                android:id="@+id/jc_score_text_team_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="3dip" />

            <TextView
                android:id="@+id/jc_score_text_hteam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="5dip"
                android:textColor="@color/black"
                android:textSize="18dip" />
        </LinearLayout>

        <TextView
            android:id="@+id/jc_score_text_state"
            android:layout_width="60dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_horizontal" />

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="130dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/jc_score_text_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="3dip" />

            <TextView
                android:id="@+id/jc_score_text_vteam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="5dip"
                android:textColor="@color/black"
                android:textSize="18dip" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/main_score_layout_center"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/main_score_layout_top"
        android:background="@drawable/jc_score_inof_yello"
        android:gravity="center_horizontal|center_vertical" >

        <TextView
            android:id="@+id/jc_score_text_h_ball"
            android:layout_width="135dip"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|center_vertical"
            android:text="5"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/jc_score_text_state"
            android:layout_width="50dip"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|center_vertical"
            android:text="时间"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/jc_score_text_v_ball"
            android:layout_width="135dip"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|center_vertical"
            android:text="3"
            android:textColor="@color/white" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/main_score_layout_center"
        android:paddingBottom="75dip" >

        <LinearLayout
            android:id="@+id/jc_score_info_layout"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/jc_score_info_layout_bottom_layout"
        android:layout_width="fill_parent"
        android:layout_height="70dip"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center_vertical"
        android:background="@color/grey"
        android:orientation="vertical"
        android:padding="5dip" >

        <TextView
            android:id="@+id/jc_score_text_h_ball"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|center_vertical"
            android:text="图例说明:"
            android:textColor="@color/black" />
    </LinearLayout>

</RelativeLayout>