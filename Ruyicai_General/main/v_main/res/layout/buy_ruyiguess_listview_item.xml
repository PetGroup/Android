<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:id="@+id/ruyi_guess_item_layout"
        android:layout_width="fill_parent"
        android:layout_height="88dip"
        android:layout_marginTop="3dip"
        android:orientation="horizontal"
        android:paddingBottom="4dip"
        android:paddingLeft="8dip"
        android:paddingRight="8dip"
        android:paddingTop="10dip" >

        <TextView
            android:id="@+id/ruyi_guess_item_integral"
            android:layout_width="75dip"
            android:layout_height="fill_parent"
            android:layout_gravity="center_vertical"
            android:background="@drawable/textview_yellow_style"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <!-- 箭头 -->

            <ImageView
                android:id="@+id/ruyi_guess_guide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="3dip"
                android:src="@drawable/xiangyou"
                android:visibility="invisible" />

            <LinearLayout
                android:id="@+id/ruyi_guess_item_state_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="3dip"
                android:layout_toLeftOf="@id/ruyi_guess_guide"
                android:gravity="center"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/ruyi_guess_item_participate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginRight="5dip"
                    android:background="@drawable/buy_ruyiguess_item_state_green"
                    android:gravity="center"
                    android:minWidth="65dip"
                    android:paddingLeft="2dip"
                    android:paddingRight="2dip"
                    android:textColor="@color/white"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/ruyi_guess_item_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dip"
                    android:gravity="center"
                    android:textColor="@color/ruyi_guess_progress_red_color"
                    android:textSize="12sp" />

                <!-- 我的扎堆中 参与人数 -->

                <TextView
                    android:id="@+id/ruyi_guess_participants_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dip"
                    android:gravity="center"
                    android:textColor="@color/ruyi_guess_progress_red_color"
                    android:textSize="12sp"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:layout_toLeftOf="@id/ruyi_guess_item_state_layout"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.5"
                    android:orientation="horizontal" >

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent" >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="bottom"
                            android:orientation="horizontal"
                            android:paddingRight="20dip" >

                            <TextView
                                android:id="@+id/ruyi_guess_item_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:gravity="center_vertical"
                                android:padding="3dip"
                                android:singleLine="true"
                                android:textColor="@color/black"
                                android:textSize="16sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_gravity="right"
                            android:gravity="right"
                            android:orientation="horizontal" >

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:src="@drawable/buy_ruyiguess_hot" />
                        </LinearLayout>
                    </FrameLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/ruyi_guess_item_detail"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:maxLines="2"
                    android:padding="3dip"
                    android:textColor="@color/ruyi_guess_end_text_color"
                    android:textSize="15sp" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:layout_marginTop="3dip"
        android:background="@color/zc_sfc_divider" />

    <View
        android:id="@+id/ruyi_guess_divider"
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:layout_gravity="bottom"
        android:background="@color/zc_sfc_divider" />

    <TextView
        android:id="@+id/ruyi_myguess_item_participate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|right"
        android:layout_marginRight="6dip"
        android:background="@drawable/buy_ruyiguess_item_participateing"
        android:gravity="center"
        android:paddingBottom="2dip"
        android:paddingLeft="8dip"
        android:paddingRight="2dip"
        android:paddingTop="2dip"
        android:textColor="@color/white" />

    <ImageView
        android:id="@+id/ruyi_myguess_item_recommend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|right"
        android:layout_marginTop="4dip"
        android:gravity="center"
        android:src="@drawable/buy_ruyiguess_recommend"
        android:textColor="@color/white" />

    <!-- 没有登陆时显示这个布局 -->

    <include layout="@layout/buy_ruyiguess_signin" />

    <!-- 没有我创建的主题或参与的主题显示这个布局 -->

    <TextView
        android:id="@+id/buy_guess_no_subject"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:visibility="gone" />

</FrameLayout>