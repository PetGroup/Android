<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="4dip" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:padding="5dip"
        android:scrollbars="none" >

        <LinearLayout
            android:id="@+id/zc_play_change_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/buy_ruyi_guess_item_top"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/ruyi_guess_item_description"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dip"
                    android:textColor="@android:color/black"
                    android:textSize="16sp" />

                <RelativeLayout
                    android:id="@+id/ruyi_guess_answer_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/ruyi_guess_progress_answer_color"
                    android:padding="5dip"
                    android:visibility="gone" >

                    <TextView
                        android:id="@+id/ruyi_guess_award_score"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:gravity="center"
                        android:paddingRight="30dip"
                        android:textColor="@android:color/white"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/ruyi_guess_item_answer"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@id/ruyi_guess_award_score"
                        android:gravity="left|center_vertical"
                        android:paddingLeft="5dip"
                        android:textColor="@android:color/white"
                        android:textSize="18sp" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ruyi_guess_itme_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/buy_ruyi_guess_item_center"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="10dip" >
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/buy_ruyi_guess_item_bottom"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingBottom="3dip"
                    android:paddingLeft="5dip"
                    android:paddingRight="5dip"
                    android:paddingTop="3dip" >

                    <TextView
                        android:id="@+id/ruyi_guess_item_participate_people"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:gravity="center"
                        android:paddingLeft="15dip"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/ruyi_guess_item_prizepool_score"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:gravity="center"
                        android:paddingRight="15dip"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/ruyi_guess_item_throw_score"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@id/ruyi_guess_item_prizepool_score"
                        android:layout_toRightOf="@id/ruyi_guess_item_participate_people"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:textSize="14sp" />
                </RelativeLayout>
            </LinearLayout>

            <!-- 赞和踩布局 start -->
            <LinearLayout
                android:id="@+id/ruyi_guess_zan_and_cai_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="20dip"
                android:background="@drawable/ruyi_guess_zan_cai_bg"
                android:gravity="center_vertical"
                android:paddingLeft="5dip" >
                
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical" >

                    <TextView
                        android:id="@+id/ruyi_guess_tread"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/ruyi_guess_tread_gray" />

                    <TextView
                        android:id="@+id/ruyi_guess_tread_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="60dip"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="2dip"
                        android:textColor="@color/black"
                        android:textSize="14sp"/>
                </LinearLayout>

                <!-- <View android:layout_width="3dip"
                    android:layout_height="1dip"
                    android:background="@color/transparent"/> -->
                
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingLeft="5dip">

                    <TextView
                        android:id="@+id/ruyi_guess_praise"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/ruyi_guess_praise_gray" />

                    <TextView
                        android:id="@+id/ruyi_guess_praise_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="60dip"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="2dip"
                        android:textColor="@color/black"
                        android:textSize="14sp"/>
                </LinearLayout>

            </LinearLayout>
            <!-- 赞和踩布局 end -->

        </LinearLayout>
    </ScrollView>

</RelativeLayout>