<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="4dip" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:padding="5dip"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/zc_play_change_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            
            <LinearLayout android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/buy_ruyi_guess_item_top">

            <TextView
                android:id="@+id/ruyi_guess_item_description"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="5dip"
                android:textColor="@android:color/black"
                android:textSize="16sp" />
            
             <TextView
                android:id="@+id/ruyi_guess_item_answer"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="5dip"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:background="@color/ruyi_guess_progress_gray_color"
                android:textSize="20sp"
                android:visibility="gone"/>
            
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ruyi_guess_itme_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/buy_ruyi_guess_item_center"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="10dip" >
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/buy_ruyi_guess_item_bottom"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingBottom="3dip"
                    android:paddingLeft="5dip"
                    android:paddingRight="5dip"
                    android:paddingTop="3dip" >

                    <TextView
                        android:id="@+id/ruyi_guess_item_participate_people"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/ruyi_guess_item_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dip"
                        android:layout_marginRight="5dip"
                        android:layout_toLeftOf="@id/ruyi_guess_item_time"
                        android:layout_toRightOf="@id/ruyi_guess_item_participate_people"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/ruyi_guess_item_throw_score"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/ruyi_guess_item_my_score"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:textSize="16sp" />
                    </LinearLayout>
                </RelativeLayout>
                
                <View android:layout_width="fill_parent"
                        android:layout_height="1dip"
                        android:background="@color/zc_sfc_divider"/>

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dip" >

                    <ImageButton
                        android:id="@+id/ruyi_guess_seekbar_subtract"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_marginTop="3dip"
                        android:background="#00000000"
                        android:src="@drawable/subtractselecter" />

                    <ImageButton
                        android:id="@+id/ruyi_guess_seekbar_add"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:background="#00000000"
                        android:layout_marginTop="3dip"
                        android:src="@drawable/addselecter" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@id/ruyi_guess_seekbar_add"
                        android:layout_toRightOf="@id/ruyi_guess_seekbar_subtract"
                        android:orientation="vertical" >

                        <SeekBar
                            android:id="@+id/ruyi_guess_seekbar"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:max="18"
                            android:maxHeight="6dip"
                            android:minHeight="6dip"
                            android:paddingLeft="10dip"
                            android:paddingRight="10dip"
                            android:progress="0"
                            android:progressDrawable="@drawable/ruyijc_guess_seekbar_style"
                            android:thumb="@drawable/ruyijc_guess_seekbar_thumb" />

                        <com.ruyicai.activity.buy.guess.view.ScoreTextView
                            android:layout_width="fill_parent"
                            android:layout_height="40dip" />
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>