<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingLeft="5dp" >

    <RelativeLayout
        android:id="@+id/relativelayout08"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <RelativeLayout
            android:id="@+id/relativelayout01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/jc_main_list_item_text_team_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="7dp"
                android:text="001"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/jc_main_list_item_text_team"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/jc_main_list_item_text_team_id"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="5dp"
                android:paddingBottom="2dp"
                android:gravity="center"
                android:text="美国职业篮球联盟"
                android:textColor="#000000" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativelayout02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="17dp" >

            <TextView
                android:id="@+id/jc_main_list_item_text_team_name1"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="赫尔蒙的"
                android:gravity="center"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/jc_main_list_item_text_vs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/jc_main_list_item_text_team_name1"
                android:textColor="#18855D"
                android:visibility="invisible" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativelayout03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="145dp"
            android:layout_marginTop="15dp" >

            <TextView
                android:id="@+id/beidan_banquanchang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:textSize="15sp"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/linearlayout01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/beidan_banquanchang"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/jc_main_li_bifen_zu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/bifen_bg1"
                    android:gravity="center"
                    android:paddingBottom="5dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:paddingTop="5dp"
                    android:textColor="#FCD209"
                    android:textSize="10sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/maohao"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/jc_main_li_bifen_ke"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bifen_bg1"
                    android:gravity="center"
                    android:paddingBottom="5dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:paddingTop="5dp"
                    android:textColor="#FCD209"
                    android:textSize="10sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/jc_main_list_item_text_jieguo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/linearlayout01"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:text="主胜"
                android:textColor="#ff0000"
                android:textSize="15sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativelayout10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="17dp"
            android:layout_toRightOf="@id/relativelayout03" >

            <TextView
                android:id="@+id/jc_main_list_item_text_team_name2"
                android:layout_width="60dip"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="威廉二世"
                android:gravity="center"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/jclangqiu_rangfen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/jc_main_list_item_text_team_name2"
                android:layout_below="@id/jc_main_list_item_text_team_name2"
                android:paddingLeft="8dp"
                android:textColor="#18855D"
                android:textSize="15sp"
                android:visibility="gone" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/notice_prizes_single_specific_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="3dp"
            android:src="@drawable/right_sanjiao" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_below="@id/relativelayout08"
        android:background="#E0E3E8" />

</RelativeLayout>