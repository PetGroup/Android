<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingLeft="10dp"
     >
    
    
    <RelativeLayout 
    android:id="@+id/relativelayout08"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >
    
    <RelativeLayout 
    android:id="@+id/relativelayout01"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >
        <TextView
            android:id="@+id/jc_main_list_item_text_team_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="7dp"
            android:textColor="#000000"
            />
        
        <TextView
            android:id="@+id/jc_main_list_item_text_team"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/jc_main_list_item_text_team_id"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="6dp"
            android:paddingBottom="2dp"
            android:textColor="#000000"
            />
    </RelativeLayout>
    
    
     
    
    
    
    <RelativeLayout 
    android:id="@+id/relativelayout02"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="65dp"
    android:layout_marginTop="17dp">
        
        <TextView
            android:id="@+id/jc_main_list_item_text_team_name1"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="#000000"/>
        
        
         <TextView
            android:id="@+id/jc_main_list_item_text_vs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/jc_main_list_item_text_team_name1"
            android:textColor="#18855D"
            android:visibility="invisible"
            />
        </RelativeLayout>
    
    
    
    <RelativeLayout 
    android:id="@+id/relativelayout03"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="10dp"
    >
   
        
        <TextView
            android:id="@+id/beidan_banquanchang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_centerHorizontal="true"
            android:visibility="gone"
            />
        
        
         
        <LinearLayout 
	    android:id="@+id/linearlayout01"
	    android:layout_below="@id/beidan_banquanchang"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal">
        <TextView
            android:id="@+id/jc_main_li_bifen_zu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:background="@drawable/bifen_bg1"
            android:textColor="#FCD209"
            android:gravity="center"
            android:layout_marginRight="5dp"/>
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:background="@drawable/maohao"
            android:layout_marginRight="5dp"/>
        
     <TextView
            android:id="@+id/jc_main_li_bifen_ke"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:gravity="center"
            android:background="@drawable/bifen_bg1"
            android:textColor="#FCD209"/>
      </LinearLayout>
             
       
        <TextView
            android:id="@+id/jc_main_list_item_text_jieguo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/linearlayout01"
            android:textSize="15sp"
            android:layout_marginTop="13dp"
            android:layout_centerHorizontal="true"
            android:textColor="#ff0000"/>
        
        
         </RelativeLayout>
    
    
    
    <RelativeLayout 
    android:id="@+id/relativelayout10"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_toRightOf="@id/relativelayout03"
    android:layout_marginLeft="25dp"
    android:layout_marginTop="15dp">
        
        <TextView
            android:id="@+id/jc_main_list_item_text_team_name2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="#000000"/>
        
        
        <TextView
            android:id="@+id/jclangqiu_rangfen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/jc_main_list_item_text_team_name2"
            android:layout_alignLeft="@id/jc_main_list_item_text_team_name2"
            android:textSize="15sp"
            android:paddingLeft="8dp"
            android:textColor="#18855D"
            android:visibility="gone"
            />
        
        </RelativeLayout>
    
    
    <ImageView
        android:id="@+id/notice_prizes_single_specific_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:src="@drawable/right_sanjiao" />
    
  </RelativeLayout>
  
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#E0E3E8"
        android:layout_below="@id/relativelayout08"
        />
</RelativeLayout>
