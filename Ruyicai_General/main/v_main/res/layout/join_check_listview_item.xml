<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="2dip">

    <ImageView
        android:id="@id/join_check_listView_item_jump"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="3dip"
        android:src="@drawable/usercenter_ico_triangle" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="3dip"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25dip" >

            <TextView
                android:id="@id/join_check_item_text_icon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@id/join_check_item_text_result"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center_vertical"
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dip" >

            <TextView
                android:id="@id/join_check_item_text_id"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center_vertical"
                android:textColor="@color/black" />
            <!-- 奖金 -->

            <TextView
                android:id="@id/join_check_item_text_prizeamt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center_vertical"
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dip" >

            <TextView
                android:id="@id/join_check_item_text_time"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center_vertical"
                android:textColor="#663333" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3" >

                <TextView
                    android:id="@id/rengoutype"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="认购金额："
                    android:gravity="center_vertical"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@id/join_check_item_text_amt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dip"
                    android:gravity="center_vertical"
                    android:textColor="@color/red" />
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@id/join_follow"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingRight="20dp"
            android:visibility="gone" >

            <Button
                android:id="@id/usercenter_buyagain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:background="@drawable/follow_channle" />

            <Button
                android:id="@id/usercenter_querydetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="10dp"
                android:background="@drawable/usercenter_selector_lookdetails" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>