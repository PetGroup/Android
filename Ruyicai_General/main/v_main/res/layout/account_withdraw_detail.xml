<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <TextView
        android:id="@id/accountTitle_text"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/shouye_top"
        android:gravity="center"
        android:text="@string/account_withdraw_detail_title"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="15dip"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:background="@drawable/account_withdraw_number_background"
            android:orientation="horizontal" >

            <TextView
                android:id="@id/current_gold_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dip"
                android:gravity="center_vertical"
                android:text="@string/account_withdraw_number"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@id/account_withdraw_number"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dip"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:textSize="16sp" />
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="160dip"
                    android:layout_marginTop="10dip"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dip"
                        android:orientation="horizontal" >

                        <ImageView
                            android:id="@id/account_withdraw_detail_imageview_createtime"
                            android:layout_width="wrap_content"
                            android:layout_height="40dip"
                            android:src="@drawable/account_withdraw_finish" />

                        <TextView
                            android:id="@id/account_withdraw_detail_textview_createtime"
                            android:layout_width="match_parent"
                            android:layout_height="40dip"
                            android:layout_marginLeft="3dip"
                            android:text="@string/account_withdraw_detail_create_time"
                            android:textColor="@color/account_withdraw_text_color"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dip"
                        android:orientation="horizontal" >

                        <ImageView
                            android:id="@id/account_withdraw_detail_imageview_checktime"
                            android:layout_width="wrap_content"
                            android:layout_height="40dip"
                            android:src="@drawable/account_withdraw_doing" />

                        <TextView
                            android:id="@id/account_withdraw_detail_textview_checktime"
                            android:layout_width="match_parent"
                            android:layout_height="40dip"
                            android:layout_marginLeft="3dip"
                            android:text="@string/account_withdraw_detail_check_time"
                            android:textColor="@color/black"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dip"
                        android:orientation="horizontal" >

                        <ImageView
                            android:id="@id/account_withdraw_detail_imageview_remittime"
                            android:layout_width="wrap_content"
                            android:layout_height="40dip"
                            android:src="@drawable/account_withdraw_not_start" />

                        <TextView
                            android:id="@id/account_withdraw_detail_textview_remittime"
                            android:layout_width="match_parent"
                            android:layout_height="40dip"
                            android:layout_marginLeft="3dip"
                            android:text="@string/account_withdraw_detail_remit_time"
                            android:textColor="@color/black"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dip"
                        android:orientation="horizontal" >

                        <ImageView
                            android:id="@id/account_withdraw_detail_imageview_finishtime"
                            android:layout_width="wrap_content"
                            android:layout_height="40dip"
                            android:src="@drawable/account_withdraw_not_start" />

                        <TextView
                            android:id="@id/account_withdraw_detail_textview_finishtime"
                            android:layout_width="match_parent"
                            android:layout_height="40dip"
                            android:layout_marginLeft="3dip"
                            android:text="@string/account_withdraw_detail_finish_time"
                            android:textColor="@color/black"
                            android:textSize="16sp" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:background="@color/black" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="179dip"
                    android:orientation="horizontal" >

                    <View
                        android:layout_width="1dip"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/black" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="1dip"
                        android:layout_weight="2"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="35dip"
                            android:orientation="horizontal" >

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="3"
                                android:gravity="center"
                                android:text="@string/account_withdraw_detail_order_type"
                                android:textColor="@color/black" />

                            <View
                                android:layout_width="1dip"
                                android:layout_height="match_parent"
                                android:background="@color/black" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="@string/account_withdraw_detail_order_type_value"
                                android:textColor="@color/black" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dip"
                            android:background="@color/black" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="35dip"
                            android:orientation="horizontal" >

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="3"
                                android:gravity="center"
                                android:text="@string/account_withdraw_detail_amount"
                                android:textColor="@color/black" />

                            <View
                                android:layout_width="1dip"
                                android:layout_height="match_parent"
                                android:background="@color/black" />

                            <TextView
                                android:id="@id/account_withdraw_detail_amount"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="@string/account_withdraw_detail_query_content"
                                android:textColor="@color/black" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dip"
                            android:background="@color/black" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="35dip"
                            android:orientation="horizontal" >

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="3"
                                android:gravity="center"
                                android:text="@string/account_withdraw_detail_withdraw_mode"
                                android:textColor="@color/black" />

                            <View
                                android:layout_width="1dip"
                                android:layout_height="match_parent"
                                android:background="@color/black" />

                            <TextView
                                android:id="@id/account_withdraw_detail_withdraw_mode"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="@string/account_withdraw_detail_query_content"
                                android:textColor="@color/black" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dip"
                            android:background="@color/black" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="35dip"
                            android:orientation="horizontal" >

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="3"
                                android:gravity="center"
                                android:text="@string/account_withdraw_detail_order_state"
                                android:textColor="@color/black" />

                            <View
                                android:layout_width="1dip"
                                android:layout_height="match_parent"
                                android:background="@color/black" />

                            <TextView
                                android:id="@id/account_withdraw_detail_order_state"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:textColor="@color/black" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dip"
                            android:background="@color/black" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="35dip"
                            android:orientation="horizontal" >

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="3"
                                android:gravity="center"
                                android:text="@string/account_withdraw_detail_remark"
                                android:textColor="@color/black" />

                            <View
                                android:layout_width="1dip"
                                android:layout_height="match_parent"
                                android:background="@color/black" />

                            <TextView
                                android:id="@id/account_withdraw_detail_remark"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="@string/account_withdraw_detail_query_content"
                                android:textColor="@color/black" />
                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="1dip"
                        android:layout_height="match_parent"
                        android:background="@color/black" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:background="@color/black" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>