<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/buyagain_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shouye_top"
        android:gravity="center_horizontal|clip_vertical" >

        <TextView
            android:id="@+id/alert_dialog_touzhu_text_title"
            style="@style/UserTitleText"
            android:text="@string/usercenter_buyAgain" >
        </TextView>
    </LinearLayout>

    <ScrollView
        android:id="@+id/ScrollView01"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buyagain_title"
        android:paddingBottom="60dp" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="280dp"
            android:orientation="vertical"
            android:paddingLeft="10sp"
            android:paddingRight="10sp"
            android:paddingTop="10sp" >

            <TextView
                android:id="@+id/buyagain_touzhu_lotname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="彩票种类："
                android:textColor="@color/black"
                android:textSize="18dip" >
            </TextView>

            <TextView
                android:id="@+id/buyagain_touzhu_qihao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="20dip"
                android:text="彩票期号："
                android:textColor="@color/black"
                android:textSize="18dip" >
            </TextView>

            <TextView
                android:id="@+id/buyagain_touzhu_jine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="20dip"
                android:text="付款金额："
                android:textColor="@color/black"
                android:textSize="18dip" >
            </TextView>

            <TextView
                android:id="@+id/buyagain_touzhu_beishu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="20dip"
                android:text="倍数："
                android:textColor="@color/black"
                android:textSize="18dip" >
            </TextView>

            <TextView
                android:id="@+id/buyagain_touzhu_zhuma"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="20dip"
                android:text="注码："
                android:textColor="@color/black"
                android:textSize="18dip" >
            </TextView>
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="70sp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/buy_bot_bg" >

        <Button
            android:id="@+id/buyagain_touzhu_button_cancel"
            android:layout_width="120dip"
            android:layout_height="40sp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15sp"
            android:text=""
            android:textColor="@color/black"
            android:textSize="20dip" >
        </Button>

        <Button
            android:id="@+id/buyagain_touzhu_button_ok"
            android:layout_width="120dip"
            android:layout_height="40sp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15sp"
            android:text=""
            android:textColor="@color/black"
            android:textSize="20dip" >
        </Button>
    </RelativeLayout>

</RelativeLayout>