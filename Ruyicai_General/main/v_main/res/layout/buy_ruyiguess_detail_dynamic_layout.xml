<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="40dip"
    android:minHeight="40dip"
    android:orientation="horizontal"
    android:padding="5dip" >

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" >

        <com.ruyicai.activity.buy.guess.view.RectangularProgressBar
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/ruyi_guess_progress_gray_color"
            android:minHeight="40dip" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center" >

            <TextView
                android:id="@+id/ruyi_guess_dynamic_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dip"
                android:background="@drawable/buy_ruyi_guess_radio_normal"
                android:gravity="center_vertical"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center" >

                <TextView
                    android:id="@+id/ruyi_guess_item_progress_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:padding="2dip"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/ruyi_guess_item_time"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/ruyi_guess_item_progress_state"
                    android:gravity="center_vertical"
                    android:padding="2dip"
                    android:textColor="@color/white"
                    android:textSize="16sp" />
            </RelativeLayout>
        </LinearLayout>
    </FrameLayout>

    <View
        android:layout_width="10dip"
        android:layout_height="2dip"
        android:background="@color/transparent" />

    <TextView
        android:id="@+id/ruyi_guess_dynamic_text"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center_vertical"
        android:layout_weight="3"
        android:textColor="@color/white"
        android:textSize="18sp" />

</LinearLayout>