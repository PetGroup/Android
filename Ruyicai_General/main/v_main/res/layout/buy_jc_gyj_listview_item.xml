<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="110dip"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/buy_jc_gyj_team_id"
        android:layout_width="50dip"
        android:layout_height="fill_parent"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:textColor="@color/jc_odds_text_color"
        android:textSize="15sp" />

    <RelativeLayout android:id="@+id/buy_jc_gyj_item_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:padding="5dip">

        <ImageView
            android:id="@+id/buy_jc_gyj_team_icon"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:layout_marginLeft="10dip"
            android:layout_centerVertical="true"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/buy_jc_gyj_team_award"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="10dip"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_toLeftOf="@id/buy_jc_gyj_team_award"
            android:layout_toRightOf="@id/buy_jc_gyj_team_icon"
            android:gravity="center"
            android:paddingLeft="15dip"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/buy_jc_gyj_team_name"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/buy_jc_gyj_team_probability"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:textColor="@color/jc_odds_text_color"
                android:textSize="16sp" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>