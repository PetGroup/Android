<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="prize_detail_textview">
        <item name="android:gravity">center</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#FF000000</item>
    </style>

    <style name="prize_detail_textview_left" parent="prize_detail_textview">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_weight">0.25</item>
        <item name="android:layout_gravity">left|center_vertical</item>
    </style>

    <style name="prize_detail_textview_center" parent="prize_detail_textview">
        <item name="android:layout_width">180dp</item>
        <item name="android:layout_weight">0.375</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="prize_detail_textview_right" parent="prize_detail_textview">
        <item name="android:layout_width">180dp</item>
        <item name="android:layout_weight">0.375</item>
        <item name="android:layout_gravity">right|center_vertical</item>
    </style>
	<style name="prize_detail_linear">
	    <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:weightSum">1</item>
	</style>
    <style name="prize_detail_linear_title" parent="prize_detail_linear">
        <item name="android:background">@drawable/prized_detail_title</item>
    </style>

    <style name="prize_detail_linear_item"  parent="prize_detail_linear">
        <item name="android:background">@drawable/prized_detail_item</item>
    </style>
    
    <style name="prize_detail_linear_item_after8" parent="prize_detail_linear_item">
        <item name="android:visibility">gone</item>
    </style>

</resources>