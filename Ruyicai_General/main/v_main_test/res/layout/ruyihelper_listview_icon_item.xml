<?xml version="1.0" encoding="utf-8"?>
<!-- 图标列表项 -->

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/ruyihelper_icon_linerlayout"
    android:layout_width="fill_parent"
    android:layout_height="50dp"
    android:background="@drawable/list_bg"
    android:gravity="left|center_vertical"
    android:orientation="horizontal"
    android:padding="5dp" >

    <TextView
        android:id="@id/ruyihelper_icon_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dip"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/black"
        android:typeface="serif" android:layout_centerVertical="true">
    </TextView>

    <ImageView
        android:id="@id/ruyihelper_iicon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:paddingRight="10dip" />

    <LinearLayout
        android:id="@id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/ruyihelper_icon_text"
        android:layout_marginLeft="20dp"
        android:orientation="vertical" >

        <TextView
            android:id="@id/ruyihelper_icon_layout_text1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dip"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="19dip" android:textColor="@color/blue" >
        </TextView>

        <TextView
            android:id="@id/ruyihelper_icon_layout_text2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dip"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/black"
            android:typeface="serif" android:textSize="11dip" >
        </TextView>
    </LinearLayout>

</RelativeLayout>