<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <TextView
        style="@style/UserTitleText"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shouye_top"
        android:gravity="center"
        android:text="身份证号绑定信息"
        android:id="@id/usercenter_bindphoneorid_dialogtitle"/>

    <LinearLayout   android:orientation="vertical" 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="10dp" >
         <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/usercenter_yourname"
            android:textSize="18sp" 
            android:textColor="@color/black"></TextView>"

        <TextView android:id="@id/usercenter_bindedname"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"  
            android:textColor="@color/red"></TextView>

         <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/usercenter_youridnum"
            android:textSize="18sp" 
            android:textColor="@color/black"></TextView>"

        <TextView android:id="@id/usercenter_bindedcertidnum"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp" 
            android:textColor="@color/red"></TextView>
        <TextView
            android:id="@id/remind_forgetPasOrBind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/usercenter_hadbindedremind"
            android:autoLink="all"
            android:textSize="18sp"
            android:textColor="@color/black"/>
        
         <TextView android:id="@id/bindedcertid_servicephone"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/ruyihelper_customerServicePhone"
            android:linksClickable="true"
            android:autoLink="phone"
            android:textSize="18sp" 
            android:textColor="@color/black"></TextView>
    </LinearLayout>
	<LinearLayout android:orientation="horizontal" 
		android:gravity="center" android:layout_width="fill_parent"
		android:background="@drawable/buy_bot_bg" android:layout_height="60dp"
		android:paddingTop="5dip" >
			<Button android:id="@id/usercenter_bindedidremind_back" android:textColor="@color/black"
				android:text="@string/str_return" android:gravity="center"
				android:background="@drawable/usercenter_lookdetaildialog_closebtn_selector"
				android:textSize="18dip" android:layout_width="wrap_content"
				android:layout_height="wrap_content" />
	</LinearLayout>
</LinearLayout>