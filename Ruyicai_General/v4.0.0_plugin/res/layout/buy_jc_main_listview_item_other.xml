<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="75dip"
    android:background="@color/jczq_listview_item_bg"
    android:orientation="vertical" >

    <View
        android:id="@id/jc_main_divider_up"
        android:layout_width="match_parent"
        android:layout_height="1.5dip"
        android:background="@color/zc_sfc_divider"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dip"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="14"
            android:orientation="vertical" >

            <TextView
                android:id="@id/game_name"
                android:layout_width="match_parent"
                android:layout_height="33dip"
                android:background="@drawable/jc_game_name_bg"
                android:gravity="center"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@id/game_date"
                android:layout_width="match_parent"
                android:layout_height="42dip"
                android:background="@color/jc_main_background_color"
                android:gravity="center"
                android:textColor="@color/jc_odds_text_color"
                android:textSize="12sp" />
        </LinearLayout>

        <View
            android:layout_width="1dip"
            android:layout_height="match_parent"
            android:background="@color/zc_sfc_divider" />

        <LinearLayout
            android:id="@id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:orientation="horizontal"
            android:padding="2dip" >

            <LinearLayout
                android:id="@id/home_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:orientation="vertical" >

                <TextView
                    android:id="@id/home_team_name"
                    android:layout_width="match_parent"
                    android:layout_height="38dip"
                    android:layout_marginLeft="3dip"
                    android:layout_marginRight="3dip"
                    android:layout_marginTop="3dip"
                    android:gravity="center"
                    android:textColor="@color/text_press_selector"/>

                <TextView
                    android:id="@id/home_team_odds"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="@color/jc_odds_press_selector"
                    android:textSize="13sp" />
            </LinearLayout>

            <View
                android:id="@id/divider_01"
                android:layout_width="1dip"
                android:layout_height="40dip"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="3dip"
                android:layout_marginRight="3dip"
                android:background="@color/zc_sfc_divider" />

            <LinearLayout
                android:id="@id/vs_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:orientation="vertical" >

                <TextView
                    android:id="@id/game_vs"
                    android:layout_width="match_parent"
                    android:layout_height="38dip"
                    android:layout_marginLeft="3dip"
                    android:layout_marginRight="3dip"
                    android:layout_marginTop="3dip"
                    android:gravity="center"
                    android:text="VS"
                    android:textColor="@color/text_press_selector"/>

                <TextView
                    android:id="@id/game_vs_odds"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="@color/jc_odds_press_selector"
                    android:textSize="13sp" />
            </LinearLayout>

            <View
                android:id="@id/divider_02"
                android:layout_width="1dip"
                android:layout_height="40dip"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="3dip"
                android:layout_marginRight="3dip"
                android:background="@color/zc_sfc_divider" />

            <LinearLayout
                android:id="@id/guest_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:orientation="vertical" >

                <TextView
                    android:id="@id/guest_team_name"
                    android:layout_width="match_parent"
                    android:layout_height="38dip"
                    android:layout_marginLeft="3dip"
                    android:layout_marginRight="3dip"
                    android:layout_marginTop="3dip"
                    android:gravity="center"
                    android:textColor="@color/text_press_selector"/>

                <TextView
                    android:id="@id/guest_team_odds"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="@color/jc_odds_press_selector"
                    android:textSize="13sp" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="1dip"
            android:layout_height="match_parent"
            android:background="@color/zc_sfc_divider" />

        <LinearLayout
            android:id="@id/linearLayout3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_weight="15"
            android:gravity="right"
            android:orientation="vertical" >

            <TextView
                android:id="@id/game_analysis"
                android:layout_width="match_parent"
                android:layout_height="33dip"
                android:background="@drawable/jc_team_analysis_selector"
                android:gravity="center"
                android:text="析"
                android:textColor="@android:color/black" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="42dip"
                android:background="@color/white"
                android:padding="3dip" >

                <Button
                    android:id="@id/game_dan"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:gravity="center"
                    android:text="胆"
                    android:textColor="@color/black"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1.5dip"
        android:background="@color/zc_sfc_divider" />

</LinearLayout>