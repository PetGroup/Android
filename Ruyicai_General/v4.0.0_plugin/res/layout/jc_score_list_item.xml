<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dip"
    android:background="@color/white"
    android:orientation="horizontal" >
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_weight="1">

        <TextView
            android:id="@id/jc_europe_list_item_text_company"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:text="公司"
            android:textColor="@color/black"
            android:textSize="15dip" />
        
        <View
            android:layout_width="1dip"
            android:layout_height="match_parent"
            android:background="@color/zc_sfc_divider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="1"
                android:text="初盘"
                android:textColor="@color/black"
                android:textSize="15dip" />
            
            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="@color/zc_sfc_divider" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="1"
                android:text="即时盘"
                android:textColor="@color/black"
                android:textSize="15dip" />
        </LinearLayout>
        
        </LinearLayout>
        
    <View
            android:layout_width="2dip"
            android:layout_height="match_parent"
            android:background="@color/zc_sfc_divider" />
        
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:layout_weight="1.4"
            android:orientation="vertical" >
            
            <TextView
                    android:id="@id/jc_europe_list_item_text_center_win"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:text="初盘"
                    android:textColor="@color/black"
                    android:textSize="15dip" />
            
            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="@color/zc_sfc_divider" />
            
            <TextView
                    android:id="@id/jc_europe_list_item_text_right_win"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:text="即时"
                    android:textColor="@color/black"
                    android:textSize="15dip" />
            
        </LinearLayout>
        
        <View
            android:layout_width="2dip"
            android:layout_height="match_parent"
            android:background="@color/zc_sfc_divider" />
        
        
          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:layout_weight="1.4"
            android:orientation="vertical" >
            
              <TextView
                    android:id="@id/jc_europe_list_item_text_center_leve"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:text="初盘"
                    android:textColor="@color/black"
                    android:textSize="15dip" />
              
              <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="@color/zc_sfc_divider" />
              
              <TextView
                    android:id="@id/jc_europe_list_item_text_right_leve"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:text="即时"
                    android:textColor="@color/black"
                    android:textSize="15dip" />
            
        </LinearLayout>
        
          <View
            android:layout_width="2dip"
            android:layout_height="match_parent"
            android:background="@color/zc_sfc_divider" />
        
          
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:layout_weight="1.4"
            android:orientation="vertical" >
              
            <TextView
                    android:id="@id/jc_europe_list_item_text_center_fail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:text="初盘"
                    android:textColor="@color/black"
                    android:textSize="15dip" />
            
            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="@color/zc_sfc_divider" />
            
            <TextView
                    android:id="@id/jc_europe_list_item_text_right_fail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:text="即时受"
                    android:textColor="@color/black"
                    android:textSize="15dip" />
            
        </LinearLayout>

    
</LinearLayout>