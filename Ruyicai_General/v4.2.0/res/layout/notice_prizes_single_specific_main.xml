<?xml version="1.0" encoding="utf-8"?>
<!-- 开奖号码页面 -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/notice_prizes_single_specific_main_relative01"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:background="@drawable/hongse"
        android:paddingBottom="3dp"
        android:paddingLeft="10dp"
        android:visibility="gone" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="1dp"
            android:text="@string/kaijiangxinxi"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:typeface="serif" />

        <RelativeLayout
            android:id="@+id/relativelayout_center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" >

            <TextView
                android:id="@+id/jc_notice_text_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="15sp" >
            </TextView>

            <Button
                android:id="@+id/jc_notice_img_return"
                android:layout_width="19dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/jc_notice_text_title"
                android:layout_centerHorizontal="true"
                android:background="@drawable/notice_top_selector" />
        </RelativeLayout>

        <Button
            android:id="@+id/jc_notice_date_sort"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/riqi" />

        <TextView
            android:id="@+id/notice_prizes_single_specific_title_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:typeface="serif"
            android:visibility="gone" >
        </TextView>

        <!-- 周黎鸣7.3将Button换成ImageButton -->

        <Button
            android:id="@+id/notice_prizes_single_specific_main_returnID"
            android:layout_width="96dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/notice_jc_date_selector"
            android:gravity="left|center_vertical"
            android:paddingLeft="5dp"
            android:textColor="@color/white"
            android:visibility="gone" >
        </Button>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relateive_date"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:layout_below="@id/notice_prizes_single_specific_main_relative01"
        android:background="#DEDFDE"
        android:visibility="gone" >

        <TextView
            android:id="@+id/dateshow"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:textColor="@android:color/black"
            android:layout_centerInParent="true"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/xinqi"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_centerInParent="true"
            android:layout_toRightOf="@id/dateshow"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:textSize="20sp" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="#E0E3E8" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/notice_prizes_single_specific_main_relative01"
        android:layout_centerHorizontal="true"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/notice_beijing_single_item_play"
            android:layout_width="fill_parent"
            android:layout_height="50dip"
            android:background="@drawable/buy_bot_bg"
            android:gravity="center_vertical"
            android:paddingTop="5sp"
            android:visibility="gone" >

            <Button
                android:id="@+id/buy_lq_main_btn_type"
                android:layout_width="110dip"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/football_advancebatchcode"
                android:gravity="left|center_vertical"
                android:paddingLeft="5dip"
                android:text="玩法切换"
                android:textColor="@color/black"
                android:textSize="18sp" >
            </Button>

            <Button
                android:id="@+id/notice_beijing_single_main_batch_code"
                android:layout_width="110dip"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/football_advancebatchcode"
                android:gravity="left|center_vertical"
                android:paddingLeft="5dip"
                android:textColor="@color/black"
                android:textSize="18sp" >
            </Button>
        </LinearLayout>

        <ListView
            android:id="@+id/notice_prizes_single_specific_listview"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="45dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/list_bg_white"
            android:cacheColorHint="@color/transparent"
            android:divider="#d2d2d2"
            android:dividerHeight="0dip" />

        <RelativeLayout
            android:id="@+id/relativelayout03"
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:layout_alignParentBottom="true"
            android:background="#22272B"
            android:gravity="center_vertical"
            android:visibility="gone" >

            <Button
                android:id="@+id/go_jc_touzhu"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/join_detail_selector"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>