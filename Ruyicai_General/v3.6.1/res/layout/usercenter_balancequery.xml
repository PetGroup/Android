<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="fill_parent"
	android:orientation="vertical" xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="wrap_content" android:background="#ffffff" >
	<LinearLayout android:orientation="horizontal"
		android:gravity="center" android:id="@+id/titletext_football"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:background="@drawable/shouye_top">
		<TextView android:id="@+id/usercenter_balancequery_title"
			android:text="账户余额" style="@style/UserTitleText" />
	</LinearLayout>
	<ScrollView android:layout_width="fill_parent" android:paddingBottom="60dp" 
		android:layout_height="wrap_content" android:layout_below="@+id/titletext_football">
		<LinearLayout android:orientation="vertical"
			android:layout_width="fill_parent" android:layout_height="wrap_content">
			<TextView android:layout_width="fill_parent"
				android:layout_margin="10dp" android:textStyle="bold"
				android:layout_height="wrap_content" android:id="@+id/balanceinfo"
				android:textSize="18dip" android:textColor="@color/black" />
			<TextView android:text="@string/usercenter_remind" android:visibility="gone"
				android:textColor="#cc0000" android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:gravity="center"
				android:lineSpacingMultiplier="1.2"
				android:textSize="14dip" android:id="@+id/usercenter_remind_text" />
		
		</LinearLayout>
	</ScrollView>

	<LinearLayout android:orientation="horizontal" android:layout_alignParentBottom="true"
		android:gravity="center_vertical" android:layout_width="fill_parent"
		android:background="@drawable/buy_bot_bg" android:layout_height="60dp"
		android:paddingTop="5dip" >
		<RelativeLayout android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:gravity="center_horizontal">
			<Button android:id="@+id/usercenter_balancequery_ok" android:textColor="@color/black"
				android:layout_marginLeft="10dp" android:visibility="gone"
				android:text="@string/login_dialog_ok" android:layout_toLeftOf="@+id/usercenter_balancequery_back"
				android:background="@drawable/usercenter_lookdetaildialog_closebtn_selector"
				android:textSize="18dip" android:layout_width="wrap_content"
				android:layout_height="wrap_content" />
			<Button android:id="@+id/usercenter_balancequery_back" android:textColor="@color/black"
				android:layout_toRightOf="@+id/usercenter_balancequery_back"
				android:text="关闭" android:gravity="center"
				android:layout_marginRight="10dp"
				android:background="@drawable/usercenter_lookdetaildialog_closebtn_selector"
				android:textSize="18dip" android:layout_width="wrap_content"
				android:layout_height="wrap_content" />
		</RelativeLayout>
	</LinearLayout>
</RelativeLayout>