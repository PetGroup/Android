<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="wrap_content"
	android:background="@color/white" android:orientation="vertical">
	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:gravity="center_horizontal|center_vertical"
		android:background="@drawable/shouye_top">
		<TextView android:text="温馨提示" android:id="@+id/TextView01"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:layout_gravity="center_horizontal" android:textSize="20dip"
			android:textColor="@color/white" android:paddingTop="10sp"></TextView>
	</LinearLayout>
	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:gravity="center_horizontal"
		android:paddingTop="20sp">
		<ImageView android:id="@+id/touzhu_succe_img"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:layout_gravity="center_horizontal" android:paddingRight="10sp"></ImageView>
		<TextView android:text="投注已受理!" android:id="@+id/touzhu_succe_text"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:layout_gravity="center_horizontal" android:textSize="22dip"
			android:textColor="@color/black"></TextView>
	</LinearLayout>
	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:gravity="center_horizontal"
		android:paddingBottom="20sp" android:paddingTop="20sp">
		<Button android:id="@+id/touzhu_succe_button_share"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:layout_marginRight="5dip" android:layout_marginLeft="5dip"
			android:text="分   享" android:textColor="@color/white"
			android:textSize="20sp" />
		<Button android:id="@+id/touzhu_succe_button_sure"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:layout_marginRight="5dip" android:layout_marginLeft="5dip"
			android:text="确   定" android:textColor="@color/white"
			android:textSize="20sp" />
	</LinearLayout>
</LinearLayout>
