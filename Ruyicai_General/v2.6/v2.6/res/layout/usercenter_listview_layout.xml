<?xml version="1.0" encoding="UTF-8"?>
	<!-- miao用户中心的布局文件 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:background="@drawable/bg">
	<RelativeLayout android:layout_width="fill_parent"
		android:layout_height="fill_parent">
		<TextView android:layout_width="fill_parent" android:layout_height="100dp" android:visibility="gone"/>
		<LinearLayout android:orientation="vertical"
			android:paddingLeft="5dp" android:paddingRight="5dp"
			android:layout_width="fill_parent" android:layout_height="fill_parent">
			<ListView android:id="@+id/usercenter_listview_queryinfo" android:fadeScrollbars="true"
				android:divider="@drawable/litt" android:cacheColorHint="#00000000"
				android:layout_width="fill_parent" android:layout_height="fill_parent"
				android:paddingBottom="60dp" android:layout_gravity="center_horizontal" />
		</LinearLayout>
		<RelativeLayout android:paddingLeft="25dp"
			android:layout_alignParentBottom="true" android:paddingRight="25dp"
			android:layout_width="fill_parent" android:gravity="center"
			android:layout_height="60dp" android:background="@drawable/buy_bot_bg"
			android:id="@+id/relativeLayout1">
			<ImageButton android:layout_width="wrap_content"
				android:id="@+id/usercenter_btn_subpage"
				android:layout_alignParentLeft="true" android:layout_height="wrap_content"
				android:background="@drawable/join_check_up_selector"
				android:layout_centerVertical="true" />
			<TextView android:layout_width="wrap_content"
				android:id="@+id/usercenter_text_pagetext" android:textColor="@color/black"
				android:layout_height="wrap_content" android:text="共5页  当前第1页"
				android:layout_centerInParent="true" />
			<ImageButton android:layout_width="wrap_content"
				android:id="@+id/usercenter_btn_addpage"
				android:layout_centerVertical="true" android:layout_height="wrap_content"
				android:background="@drawable/join_check_down_selector"
				android:layout_alignParentRight="true" />
		</RelativeLayout>
	</RelativeLayout>
</LinearLayout>