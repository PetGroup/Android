<?xml version="1.0" encoding="utf-8"?>
	<!-- 合买大厅 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="wrap_content"
	android:layout_height="wrap_content" android:background="@color/grey">
	<RelativeLayout android:id="@+id/main_buy_title"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:background="@drawable/shouye_top">
		<TextView android:text="合买详情" android:id="@+id/join_detail_text_title"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:textColor="@color/white" android:paddingLeft="10dip"
			android:textSize="20dip" android:layout_alignParentLeft="true"
			android:layout_centerVertical="true"></TextView>
		<Button android:id="@+id/join_detail_img_return"
			android:layout_width="100dip" android:layout_height="30dip"
			android:layout_alignParentRight="true" android:layout_marginRight="10dip"
			android:layout_centerVertical="true" android:text="返回上一页"
			android:textColor="@color/white" android:textSize="15dip">
		</Button>
	</RelativeLayout>

	<RelativeLayout android:id="@+id/RelativeLayout01"
		android:layout_width="fill_parent" android:layout_height="fill_parent">
		<ScrollView android:layout_height="fill_parent"
			android:layout_width="fill_parent" android:paddingBottom="80dip"
			android:background="@color/grey">
			<LinearLayout android:layout_above="@+id/LinearLayout01"
				android:layout_height="wrap_content" android:id="@+id/LinearLayout02"
				android:layout_width="fill_parent" android:paddingLeft="20dip"
				android:paddingRight="20dip" android:orientation="vertical">
				<LinearLayout android:id="@+id/LinearLayout03"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:orientation="vertical">
					<LinearLayout android:id="@+id/LinearLayout03"
						android:layout_width="wrap_content" android:layout_height="wrap_content"
						android:paddingTop="10dip">
						<TextView android:layout_height="wrap_content"
							android:text="我要认购：" android:layout_width="wrap_content"
							android:textColor="@color/black" android:textSize="13dip"></TextView>
						<EditText android:text="1" android:id="@+id/join_detail_edit_rengou"
							android:layout_width="80sp" android:layout_height="40sp"
							android:numeric="integer"></EditText>
						<TextView android:layout_height="wrap_content"
							android:text="元" android:id="@+id/TextView01"
							android:layout_width="wrap_content" android:textColor="@color/black"
							android:textSize="13dip"></TextView>
						<TextView android:layout_height="wrap_content"
							android:paddingLeft="20dip" android:text="我要保底："
							android:id="@+id/join_detail_text_rengou_progress"
							android:layout_width="wrap_content" android:textColor="@color/black"
							android:textSize="13dip"></TextView>
					</LinearLayout>
					<LinearLayout android:id="@+id/LinearLayout03"
						android:layout_width="fill_parent" android:layout_height="wrap_content"
						android:gravity="center_horizontal">
						<TextView android:layout_height="wrap_content"
							android:text="" android:id="@+id/join_detail_text_rengou_sheng"
							android:layout_width="wrap_content" android:textColor="@color/black"
							android:textSize="13dip"></TextView>
						<TextView android:layout_height="wrap_content"
							android:text="" android:id="@+id/join_detail_text_rengou_min"
							android:layout_width="wrap_content" android:textColor="@color/black"
							android:textSize="13dip" android:paddingLeft="10sp"></TextView>
					</LinearLayout>
				</LinearLayout>
				<LinearLayout android:id="@+id/LinearLayout03"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:orientation="vertical">
					<LinearLayout android:id="@+id/LinearLayout03"
						android:layout_width="wrap_content" android:layout_height="wrap_content"
						android:paddingTop="10dip">
						<TextView android:layout_height="wrap_content"
							android:text="我要保底：" android:id="@+id/TextView01"
							android:layout_width="wrap_content" android:textColor="@color/black"
							android:textSize="13dip"></TextView>
						<EditText android:text="0" android:id="@+id/join_detail_edit_baodi"
							android:layout_width="80sp" android:layout_height="40sp"
							android:numeric="integer"></EditText>
						<TextView android:layout_height="wrap_content"
							android:text="元" android:id="@+id/TextView01"
							android:layout_width="wrap_content" android:textColor="@color/black"
							android:textSize="13dip"></TextView>
						<TextView android:layout_height="wrap_content"
							android:paddingLeft="20dip" android:text="我要保底："
							android:id="@+id/join_detail_text_baodi_progress"
							android:layout_width="wrap_content" android:textColor="@color/black"
							android:textSize="13dip"></TextView>
					</LinearLayout>
					<TextView android:layout_height="wrap_content"
						android:text="我要保底：" android:id="@+id/join_detail_text_baodi_sheng"
						android:layout_width="wrap_content" android:textColor="@color/black"
						android:textSize="13dip" android:layout_gravity="center_horizontal"></TextView>
				</LinearLayout>
				<LinearLayout android:layout_width="fill_parent"
					android:layout_height="wrap_content" android:background="@drawable/alert_litte" />
				<TextView android:layout_height="wrap_content"
					android:id="@+id/join_detail_text_name" android:text="发起人："
					android:layout_width="wrap_content" android:textColor="@color/black"
					android:textSize="13dip" android:paddingTop="10dip"></TextView>
				<LinearLayout android:layout_width="fill_parent"
					android:layout_height="wrap_content" android:paddingTop="10dip"
					android:paddingBottom="10dip">
					<TextView android:layout_height="wrap_content"
						android:text="战绩：" android:layout_width="wrap_content"
						android:textColor="@color/black" android:textSize="13dip"></TextView>
					<LinearLayout android:layout_width="wrap_content"
						android:layout_height="wrap_content" android:id="@+id/join_detail_linear_record"
						android:layout_gravity="center_vertical">
					</LinearLayout>
				</LinearLayout>
				<LinearLayout android:layout_width="fill_parent"
					android:layout_height="wrap_content" android:background="@drawable/alert_litte" />
				<TextView android:layout_height="wrap_content"
					android:text="方案描述：" android:id="@+id/join_detail_text_describe"
					android:layout_width="wrap_content" android:textColor="@color/black"
					android:textSize="13dip" android:paddingTop="10dip"></TextView>
				<LinearLayout android:layout_width="fill_parent"
					android:layout_height="wrap_content">
					<TextView android:layout_height="wrap_content"
						android:text="方案金额：" android:layout_width="wrap_content"
						android:textColor="@color/black" android:textSize="13dip"
						android:paddingTop="10dip"></TextView>
					<TextView android:layout_height="wrap_content"
						android:text="" android:id="@+id/join_detail_text_atm"
						android:layout_width="wrap_content" android:textColor="@color/red"
						android:textSize="13dip" android:paddingTop="10dip"></TextView>
				</LinearLayout>
				<TextView android:layout_height="wrap_content"
					android:text="方案编号：" android:id="@+id/join_detail_text_num"
					android:layout_width="wrap_content" android:textColor="@color/black"
					android:textSize="13dip" android:paddingTop="10dip"></TextView>
				<LinearLayout android:layout_width="fill_parent"
					android:layout_height="wrap_content">
					<TextView android:layout_height="wrap_content"
						android:text="认购金额：" android:layout_width="wrap_content"
						android:textColor="@color/black" android:textSize="13dip"
						android:paddingTop="10dip"></TextView>
					<TextView android:layout_height="wrap_content"
						android:text="" android:id="@+id/join_detail_text_rengou_atm"
						android:layout_width="wrap_content" android:textColor="@color/red"
						android:textSize="13dip" android:paddingTop="10dip"></TextView>
				</LinearLayout>
				<LinearLayout android:layout_width="fill_parent"
					android:layout_height="wrap_content">
					<TextView android:layout_height="wrap_content"
						android:text="保底金额：" android:layout_width="wrap_content"
						android:textColor="@color/black" android:textSize="13dip"
						android:paddingTop="10dip"></TextView>
					<TextView android:layout_height="wrap_content"
						android:id="@+id/join_detail_text_baodi_atm" android:layout_width="wrap_content"
						android:textColor="@color/red" android:textSize="13dip"
						android:paddingTop="10dip"></TextView>
				</LinearLayout>
				<TextView android:layout_height="wrap_content"
					android:text="方案进度：" android:id="@+id/join_detail_tex_progress"
					android:layout_width="wrap_content" android:textColor="@color/black"
					android:textSize="13dip" android:paddingTop="10dip"></TextView>
				<TextView android:layout_height="wrap_content"
					android:text="方案状态：" android:id="@+id/join_detail_text_state"
					android:layout_width="wrap_content" android:textColor="@color/black"
					android:textSize="13dip" android:paddingTop="10dip"></TextView>
				<LinearLayout android:layout_width="fill_parent"
					android:layout_height="wrap_content">
					<TextView android:layout_height="wrap_content"
						android:text="剩余金额：" android:layout_width="wrap_content"
						android:textColor="@color/black" android:textSize="13dip"
						android:paddingTop="10dip"></TextView>
					<TextView android:layout_height="wrap_content"
						android:text="" android:id="@+id/join_detail_text_shengyu_atm"
						android:layout_width="wrap_content" android:textColor="@color/red"
						android:textSize="13dip" android:paddingTop="10dip"></TextView>
				</LinearLayout>
				<TextView android:layout_height="wrap_content"
					android:text="参与人数：" android:id="@+id/join_detail_text_person"
					android:layout_width="wrap_content" android:textColor="@color/black"
					android:textSize="13dip" android:paddingTop="10dip"></TextView>
				<TextView android:layout_height="wrap_content"
					android:text="发起人提成：" android:id="@+id/join_detail_text_get"
					android:layout_width="wrap_content" android:textColor="@color/black"
					android:textSize="13dip" android:paddingTop="10dip"></TextView>
				<LinearLayout android:layout_width="fill_parent"
					android:layout_height="wrap_content">
					<TextView android:layout_height="wrap_content"
						android:text="方案内容：" android:layout_width="wrap_content"
						android:textColor="@color/black" android:textSize="13dip"
						android:paddingTop="10dip" android:paddingBottom="10dip"></TextView>
					<LinearLayout android:layout_width="fill_parent"
						android:layout_height="wrap_content">
						<TextView android:layout_height="wrap_content"
							android:text="" android:id="@+id/join_detail_text_context"
							android:layout_width="fill_parent" android:textColor="@color/black"
							android:textSize="13dip" android:paddingTop="10dip"
							android:paddingBottom="10dip"></TextView>
					</LinearLayout>
				</LinearLayout>


				<ImageButton android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:src="@drawable/join_detail_cancel_selector"
					android:background="#00000000" android:layout_gravity="center_horizontal"
					android:paddingTop="10dip" android:visibility="gone"></ImageButton>
				<CheckBox android:text="" android:id="@+id/jion_info_check"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:paddingTop="10dip" android:visibility="gone"></CheckBox>
			</LinearLayout>
		</ScrollView>
		<LinearLayout android:id="@+id/LinearLayout01"
			android:layout_width="fill_parent" android:layout_height="70dip"
			android:background="@drawable/join_detail_bottom_bg" android:gravity="center_horizontal"
			android:layout_alignParentBottom="true">
			<ImageButton android:id="@+id/join_detail_img_buy"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:src="@drawable/join_detail_selector" android:background="#00000000"
				android:layout_gravity="center_vertical"></ImageButton>
		</LinearLayout>
	</RelativeLayout>
</LinearLayout>