<?xml version="1.0" encoding="utf-8"?>
<ScrollView    xmlns:android="http://schemas.android.com/apk/res/android" 
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
<LinearLayout
    android:layoutAnimation="@anim/layout_animation_linear"
    android:animationCache="false"
    android:clipToPadding="false"
    android:padding="12dp"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:stretchColumns="1"
    >
	<LinearLayout android:orientation="horizontal"
		      android:layout_width="fill_parent"
		      android:layout_height="wrap_content"
		      android:layoutAnimation="@anim/layout_animation_row_right_slide"
		      >
		      <TextView android:id="@+id/register_free_info_view"
				android:layout_height="fill_parent"
				android:layout_width="fill_parent"
				android:text="@string/register_free_info"
				android:textColorHighlight="#ffaded"
				android:textColorHint="#faaded"
				android:textStyle="bold"
				android:textSize="16sp"
				android:gravity="left"
				android:textAppearance="?android:attr/textAppearanceMedium" />
	</LinearLayout>
	<LinearLayout 
		      android:orientation="horizontal"
		      android:layout_width="fill_parent"
		      android:layout_height="wrap_content"
		      android:layoutAnimation="@anim/layout_animation_row_left_slide"
		      >
		      <TextView android:id="@+id/register_username_view"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:layout_marginRight="20dip"
				android:text="@string/register_login_phoneNumber"
				android:gravity="left"
				android:textAppearance="?android:attr/textAppearanceMedium" />			          
		      <EditText android:id="@+id/register_username_edit"
				android:layout_height="wrap_content"
				android:layout_width="fill_parent"
				android:layout_marginLeft="20dip"
				android:autoText="false"
				android:scrollHorizontally="true"
				android:capitalize="none"
				android:gravity="fill_horizontal"
				android:numeric="integer"
				android:textAppearance="?android:attr/textAppearanceMedium" />
	</LinearLayout>
			      
			      <LinearLayout 
			      android:orientation="horizontal"
			      android:layout_width="fill_parent"
			      android:layout_height="wrap_content"
		          android:layoutAnimation="@anim/layout_animation_row_right_slide"
			      >
					       <TextView
							        android:id="@+id/register_password_view"
							        android:layout_height="wrap_content"
							        android:layout_width="wrap_content"
							        android:layout_marginRight="20dip"
							        android:text="@string/register_login_password"
							        android:gravity="left"
							        android:textAppearance="?android:attr/textAppearanceMedium" />
							            
							    <EditText
							        android:id="@+id/register_password_edit"
							        android:layout_height="wrap_content"
							        android:layout_width="fill_parent"
							        android:layout_marginLeft="38dip"
							        android:scrollHorizontally="true"
							        android:autoText="false"
							        android:capitalize="none"
							        android:gravity="fill_horizontal"
							        android:password="true"
							        android:textAppearance="?android:attr/textAppearanceMedium" />
					   </LinearLayout>    
					      
			      <LinearLayout 
			      android:orientation="horizontal"
			      android:layout_width="fill_parent"
			      android:layout_height="wrap_content"
		          android:layoutAnimation="@anim/layout_animation_row_left_slide"
			      >
					       <TextView
							        android:id="@+id/register_confirm_password_view"
							        android:layout_height="wrap_content"
							        android:layout_width="wrap_content"
							        android:layout_marginRight="10dip"
							        android:text="@string/register_confirm_password"
							        android:gravity="left"
							        android:textAppearance="?android:attr/textAppearanceMedium" />
							            
							    <EditText
							        android:id="@+id/register_confirm_password_edit"
							        android:layout_height="wrap_content"
							        android:layout_width="fill_parent"
							        android:layout_marginLeft="13dip"
							        android:scrollHorizontally="true"
							        android:autoText="false"
							        android:capitalize="none"
							        android:gravity="fill_horizontal"
							        android:password="true"
							        android:textAppearance="?android:attr/textAppearanceMedium" />
					   </LinearLayout>       
			     
			     <!--  
			      <LinearLayout 
			      android:orientation="horizontal"
			      android:layout_width="fill_parent"
			      android:layout_height="wrap_content"
		      	  android:layoutAnimation="@anim/layout_animation_row_right_slide"
			      >
					       <TextView
							        android:id="@+id/register_id_num_view"
							        android:layout_height="wrap_content"
							        android:layout_width="wrap_content"
							        android:layout_marginRight="0dip"
							        android:text="@string/register_id_num"
							        android:gravity="left"
							        android:textAppearance="?android:attr/textAppearanceMedium" />
							            
							    <EditText
							        android:id="@+id/register_id_num_edit"
							        android:layout_height="wrap_content"
							        android:layout_width="fill_parent"
							        android:layout_marginLeft="5dip"
							        android:scrollHorizontally="true"
							        android:autoText="false"
							        android:capitalize="none"
							        android:gravity="fill_horizontal"
							        android:textAppearance="?android:attr/textAppearanceMedium" />
					   </LinearLayout>  
					   --> 
					   <LinearLayout 
						      android:orientation="horizontal"
						      android:layout_width="fill_parent"
						      android:layout_height="wrap_content"
		      				     android:layoutAnimation="@anim/layout_animation_row_left_slide"
						      >
									   <Button
									  android:id="@+id/register_button_"
									  android:layout_width="fill_parent"
									  android:layout_height="wrap_content"
									  android:layout_weight="1"
									  android:textStyle="bold"
									  android:text="@string/register"/>    
									  <Button
									  android:id="@+id/back_to_login"
									  android:layout_width="fill_parent"
									  android:layout_height="wrap_content"
									  android:layout_weight="1"
									  android:textStyle="bold"
									  android:text="@string/back_to_login"/>    
                      </LinearLayout>
                      <TextView 
						        android:id="@+id/register_refer_info_view"
						        android:layout_height="wrap_content"
						        android:layout_width="fill_parent"
						        android:text="@string/register_refer_info_1"
						        android:textColorHighlight="#ffaded"
						        android:textColorHint="#ff0000"
			        android:textColor="#ffff00"
						        android:textStyle="bold"
			        android:textSize="18sp"
						        android:gravity="left"
						        android:textAppearance="?android:attr/textAppearanceMedium" />
                      <TextView 
			        android:id="@+id/register_refer_info_view2"
			        android:layout_height="wrap_content"
			        android:layout_width="fill_parent"
			        android:text="@string/register_refer_info_2"
			        android:textColorHighlight="#ffaded"
			        android:textColorHint="#ff0000"
			        android:textColor="#fffe00"
			        android:textStyle="normal"
			        android:textSize="16sp"
			        android:gravity="left"
			        android:autoLink="all"
			        android:textAppearance="?android:attr/textAppearanceMedium" />
</LinearLayout>
</ScrollView>