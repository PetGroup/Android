<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" 
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:background="#191919"
	>
	<RelativeLayout
		android:id="@+id/linearlayout_usercenter_originalpwd"
		android:orientation="horizontal" 
		android:layout_width="fill_parent"
		android:layout_height="wrap_content">
		<TextView
			android:id="@+id/usercenter_textview_originalpwd"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentLeft="true"
			android:layout_marginLeft="10dip"
			android:layout_marginRight="10dip"
			android:text="@string/usercenter_originalPassword"
		/>
		 <!-- wyl edit password TRUE -->
		 <!-- wyl 7.21 edit password length -->
		<EditText
			android:id="@+id/usercenter_edittext_originalpwd"
			android:layout_width="180dip"
			android:layout_height="wrap_content"
			android:layout_alignParentRight="true"
			android:layout_marginLeft="10dip"
			android:layout_marginRight="10dip"
			android:password="true"
			android:maxLength="15"
		/>
	</RelativeLayout>
	<RelativeLayout
		android:id="@+id/linearlayout_usercenter_newpwd"
		android:orientation="horizontal" 
		android:layout_below="@+id/linearlayout_usercenter_originalpwd"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content">
		<TextView
			android:id="@+id/usercenter_textview_newpwd"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentLeft="true"
			android:layout_marginLeft="10dip"
			android:layout_marginRight="10dip"
			android:text="@string/usercenter_newPassword"
		/>
		 <!-- wyl 7.21 edit password length -->
		<EditText
			android:id="@+id/usercenter_edittext_newpwd"
			android:layout_width="180dip"
			android:layout_height="wrap_content"
			android:layout_alignParentRight="true"
			android:layout_marginLeft="10dip"
			android:layout_marginRight="10dip"
			android:password="true"
			android:maxLength="15"
		/>
	</RelativeLayout>
	<RelativeLayout
		android:id="@+id/linearlayout_usercenter_confirmnewpwd"
		android:orientation="horizontal" 
		android:layout_below="@+id/linearlayout_usercenter_newpwd"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content">
		<TextView
			android:id="@+id/usercenter_textview_confirmnewpwd"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentLeft="true"
			android:layout_marginLeft="10dip"
			android:layout_marginRight="10dip"
			android:text="@string/usercenter_confirmNewPassword"
		/>
		 <!-- wyl 7.21 edit password length -->
		<EditText
			android:id="@+id/usercenter_edittext_confirmnewpwd"
			android:layout_width="180dip"
			android:layout_height="wrap_content"
			android:layout_alignParentRight="true"
			android:layout_marginLeft="10dip"
			android:layout_marginRight="10dip"
			android:password="true"
			android:maxLength="15"
		/>
	</RelativeLayout>

</RelativeLayout>