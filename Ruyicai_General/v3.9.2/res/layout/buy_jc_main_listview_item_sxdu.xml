<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="75dip"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dip"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="12"
            android:orientation="vertical" >

            <TextView
                android:id="@id/game_name"
                android:layout_width="match_parent"
                android:layout_height="33dip"
                android:background="@drawable/game_name_bj"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@id/game_date"
                android:layout_width="match_parent"
                android:layout_height="42dip"
                android:background="@color/jczq_listview_item_bg"
                android:gravity="center"
                android:textColor="@color/jc_odds_text_color"
                android:textSize="12sp" />
        </LinearLayout>

        <View
            android:layout_width="1dip"
            android:layout_height="match_parent"
            android:background="@color/zc_sfc_divider" />

        <LinearLayout
            android:id="@id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:background="@color/white"
            android:orientation="vertical"
            android:padding="3dip" >

            <LinearLayout
                android:id="@id/home_layout"
                android:layout_width="match_parent"
                android:layout_height="42dip"
                android:layout_weight="1.0"
                android:orientation="horizontal"
                android:paddingTop="5dip" >

                <TextView
                    android:id="@id/home_team_name"
                    android:layout_width="match_parent"
                    android:layout_height="37dip"
                    android:layout_weight="3"
                    android:gravity="center_horizontal|top"
                    android:textColor="@android:color/black"
                    android:textStyle="bold" />

                <TextView
                    android:id="@id/game_vs"
                    android:layout_width="match_parent"
                    android:layout_height="37dip"
                    android:layout_marginLeft="3dip"
                    android:layout_weight="4"
                    android:gravity="center_horizontal|top"
                    android:text="@string/beijing_single_vs"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@id/guest_team_name"
                    android:layout_width="match_parent"
                    android:layout_height="37dip"
                    android:layout_marginLeft="3dip"
                    android:layout_weight="3"
                    android:gravity="center_horizontal|top"
                    android:textColor="@android:color/black"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="42dip"
                android:layout_weight="1.0"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <LinearLayout
                    android:id="@id/upsingle"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.0"
                    android:background="@drawable/upsingle_normal"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/beijing_single_upsingle"
                        android:textColor="@android:color/black"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@id/upsingle_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@android:color/black"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@id/updouble"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.0"
                    android:background="@drawable/upsingle_normal"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/beijing_single_updouble"
                        android:textColor="@android:color/black"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@id/updouble_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@android:color/black"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@id/downsingle"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.0"
                    android:background="@drawable/upsingle_normal"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/beijing_single_downsingle"
                        android:textColor="@android:color/black"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@id/downsingle_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@android:color/black"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@id/downdouble"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.0"
                    android:background="@drawable/upsingle_normal"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/beijing_single_downdouble"
                        android:textColor="@android:color/black"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@id/downdouble_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@android:color/black"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="1dip"
            android:layout_height="match_parent"
            android:background="@color/zc_sfc_divider" />

        <LinearLayout
            android:id="@id/linearLayout3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_weight="13"
            android:gravity="right"
            android:orientation="vertical" >

            <TextView
                android:id="@id/game_analysis"
                android:layout_width="match_parent"
                android:layout_height="35dip"
                android:background="@drawable/team_name_bj"
                android:gravity="center"
                android:text="@string/beijing_single_xi"
                android:textColor="@android:color/black" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dip"
                android:paddingBottom="8dip"
                android:paddingLeft="5dip"
                android:paddingRight="5dip"
                android:paddingTop="8dip" >

                <Button
                    android:id="@id/game_dan"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/jc_btn"
                    android:gravity="center"
                    android:text="@string/beijing_single_dan"
                    android:textColor="@android:color/black" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="@color/zc_sfc_divider" />

</LinearLayout>