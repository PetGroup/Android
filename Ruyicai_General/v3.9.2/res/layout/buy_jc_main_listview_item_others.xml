<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="75dip"
    android:orientation="vertical" >
    
    <LinearLayout android:layout_width="match_parent"
    android:layout_height="75dip"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="12"
        android:orientation="vertical" >

        <TextView
            android:id="@id/game_name"
            android:layout_width="match_parent"
            android:layout_height="33dip"
            android:background="@drawable/game_name_bj"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@id/game_date"
            android:layout_width="match_parent"
            android:layout_height="42dip"
            android:background="@color/jczq_listview_item_bg"
            android:gravity="center"
            android:textSize="12sp"
            android:textColor="@color/jc_odds_text_color" />
    </LinearLayout>

    <View
        android:layout_width="1dip"
        android:layout_height="match_parent"
        android:background="@color/zc_sfc_divider" />

    <LinearLayout
        android:id="@id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="3dip">

        <LinearLayout android:id="@id/home_layout"
            android:layout_width="match_parent"
            android:layout_height="42dip"
            android:paddingTop="5dip"
            android:orientation="horizontal">

            <TextView
                android:id="@id/home_team_name"
                android:layout_width="match_parent"
                android:layout_height="37dip"
                android:layout_weight="3"
                android:gravity="center_horizontal|top"
                android:textStyle="bold"
                android:textColor="@android:color/black" />
            
            <TextView
                android:id="@id/game_vs"
                android:layout_width="match_parent"
                android:layout_height="37dip"
                android:gravity="center_horizontal|top"
                android:text="VS"
                android:layout_weight="4"
                android:layout_marginLeft="3dip"
                android:textColor="@android:color/black" />
            
            <TextView
                android:id="@id/guest_team_name"
                android:layout_width="match_parent"
                android:layout_height="37dip"
                android:layout_weight="3"
                android:textStyle="bold"
                android:gravity="center_horizontal|top"
                android:layout_marginLeft="3dip"
                android:textColor="@android:color/black" />
        </LinearLayout>

         <Button
             android:id="@id/jc_main_list_item_button"
             android:layout_width="match_parent"
             android:layout_height="24dip"
             android:layout_marginTop="2dip"
             android:background="@drawable/jc_list_select"
             android:hint="@string/jclq_list_item_btn_title"
             android:paddingRight="20dip"
             android:singleLine="true" >
         </Button>
        
    </LinearLayout>

    <View
        android:layout_width="1dip"
        android:layout_height="match_parent"
        android:background="@color/zc_sfc_divider" />

    <LinearLayout
        android:id="@id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:layout_weight="13"
        android:gravity="right"
        android:orientation="vertical" >

        <TextView
            android:id="@id/game_analysis"
            android:layout_width="match_parent"
            android:layout_height="35dip"
            android:background="@drawable/team_name_bj"
            android:gravity="center"
            android:text="析"
            android:textColor="@android:color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dip"
            android:paddingBottom="8dip"
            android:paddingLeft="5dip"
            android:paddingRight="5dip"
            android:paddingTop="8dip" >
            
            <Button android:id="@id/game_dan"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/jc_btn"
                android:gravity="center"
                android:text="胆"
                android:textColor="@android:color/black" />

        </LinearLayout>
    </LinearLayout>
    
    </LinearLayout>
    
    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="@color/zc_sfc_divider" />

</LinearLayout>