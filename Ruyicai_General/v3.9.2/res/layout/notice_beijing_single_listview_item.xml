<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="6dip" >

    <LinearLayout
        android:id="@id/LinearLayout01"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/jc_bg1"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5sp"
            android:gravity="bottom"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="300sp"
                android:layout_height="wrap_content"
                android:background="@drawable/jc_bgtop"
                android:paddingTop="5sp" >

                <TextView
                    android:id="@id/jc_main_list_item_text_team"
                    android:layout_width="70sp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_gravity="center_vertical"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="16sp" >
                </TextView>

                <LinearLayout
                    android:layout_width="100sp"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal|center_vertical"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@id/jc_main_list_item_text_team_name1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="16sp" >
                    </TextView>
                </LinearLayout>

                <TextView
                    android:id="@id/jc_main_list_item_text_vs"
                    android:layout_width="35sp"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="vs"
                    android:textColor="@color/blue"
                    android:textSize="14sp" >
                </TextView>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal|center_vertical"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@id/jc_main_list_item_text_team_name2"
                        android:layout_width="100sp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="16sp" >
                    </TextView>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/jc_bgbottom2"
                android:paddingTop="3sp" >

                <TextView
                    android:id="@id/jc_main_list_item_text_team_id"
                    android:layout_width="70sp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/black"
                    android:textSize="13sp" >
                </TextView>
                
                <LinearLayout
                    android:layout_width="230sp"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:paddingTop="3sp" 
                    android:orientation="vertical">

                <LinearLayout
                    android:layout_width="230sp"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal">

                    <TextView
                        android:id="@id/jc_main_list_item_text_jieguo"
                        android:layout_width="100sp"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="比赛结果:"
                        android:textColor="@color/black"
                        android:textSize="13sp" >
                    </TextView>
                    
                    <TextView
                        android:id="@id/jc_main_list_item_text_score"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="比分:"
                        android:textColor="@color/black"
                        android:textSize="13sp" >
                    </TextView>

                </LinearLayout>

                <TextView
                    android:id="@id/notice_beijing_single_item_odds"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="3dip"
                    android:text="@string/notice_beijing_single_item_odds"
                    android:textColor="@color/black"
                    android:textSize="13sp" />
                 </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    
    <ImageView
        android:id="@id/notice_prizes_single_specific_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:paddingTop="15dip"
        android:src="@drawable/usercenter_ico_triangle" />

</RelativeLayout>