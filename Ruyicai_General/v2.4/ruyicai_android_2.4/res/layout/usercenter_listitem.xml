<?xml version="1.0" encoding="utf-8"?>
	<!--用户中心列表子项布局-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/usercenter_item_linerlayout" android:orientation="horizontal"
	android:gravity="left" android:layout_width="fill_parent"
	android:layout_height="wrap_content"  >
	<RelativeLayout android:layout_toRightOf="@+id/usercenter_icon"
		android:layout_width="fill_parent" android:layout_height="40dp">
		<ImageView android:id="@+id/usercenter_item_lefticon" android:layout_centerVertical="true"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:layout_marginLeft="15dip" android:layout_alignParentLeft="true" />
		<TextView android:id="@+id/usercenter_item_text" android:text="余额查询" android:textSize="18sp"
			android:textColor="@color/black" android:layout_toRightOf="@+id/usercenter_item_lefticon"
			android:typeface="serif" android:layout_marginLeft="20dip"	android:gravity="center_vertical"
			android:layout_width="wrap_content" android:layout_height="fill_parent">
		</TextView>
		<ImageView android:id="@+id/usercenter_item_righticon" android:layout_centerVertical="true"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:layout_alignParentRight="true" android:src="@drawable/usercenter_ico_triangle"
			android:paddingRight="20dip" />
	</RelativeLayout>
</LinearLayout>
