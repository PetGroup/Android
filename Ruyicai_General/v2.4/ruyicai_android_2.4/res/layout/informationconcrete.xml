<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:background="@color/white" >
	<RelativeLayout android:id="@+id/main_buy_title"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:background="@drawable/shouye_top">
		<TextView android:text="" android:id="@+id/join_hall_text_title"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:textColor="@color/white" android:paddingLeft="10dip"
			android:textSize="20dip" android:layout_alignParentLeft="true"
			android:layout_centerVertical="true"></TextView>
		<Button android:id="@+id/join_hall_img_return"
			android:layout_width="90dip" android:layout_height="30dip"
			android:layout_alignParentRight="true" android:layout_marginRight="10dip"
			android:layout_centerVertical="true" android:text="返回上一页"
			android:textColor="@color/white" android:textSize="15dip">
		</Button>
	</RelativeLayout>
	<ScrollView android:layout_width="fill_parent" android:layout_height="fill_parent" >
	<TextView  
    android:id="@+id/webview"  
    android:layout_width="fill_parent"  android:textSize="18dip" android:lineSpacingMultiplier="1.3"
    android:layout_height="fill_parent" android:padding="10dip"/>  
    </ScrollView>	
	</LinearLayout>