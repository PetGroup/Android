<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:scrollbars="vertical"   
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:background="#FFFFFF">
	<LinearLayout android:layout_width="fill_parent" android:animationCache="false"
		android:layout_height="wrap_content" android:orientation="vertical">
		<RelativeLayout android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:orientation="vertical"
			android:background="@drawable/shouye_top" android:paddingLeft="10dip">
			<TextView android:text="@string/bank_cards_recharge" android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				 android:textColor="@color/white"
				android:textSize="20dip" android:layout_centerVertical="true"></TextView>
		</RelativeLayout>
		<LinearLayout android:layout_width="fill_parent"
		android:layout_height="fill_parent" android:orientation="vertical"
			android:background="@color/white">
			<TextView android:layout_height="wrap_content"
				android:textColor="@color/black" android:layout_width="wrap_content"
				android:text="" android:gravity="left" android:textAppearance="?android:attr/textAppearanceMedium" />
			<LinearLayout android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:orientation="horizontal">
				<TextView android:layout_height="wrap_content"
					android:textColor="@color/black" android:layout_width="wrap_content"
					android:text="@string/bank_card_phone_text_moneny" android:gravity="left"
					android:textAppearance="?android:attr/textAppearanceMedium" />
				<EditText android:id="@+id/bank_card_phone_recharge_value" android:text="@string/chargehintmoney"
					android:layout_height="wrap_content" android:layout_width="100dip"
					android:scrollHorizontally="true" android:autoText="false"
					android:capitalize="none" android:layout_weight="1"
					android:numeric="integer" android:gravity="fill_horizontal"
					android:textAppearance="?android:attr/textAppearanceMedium" />
				<TextView android:layout_height="wrap_content" android:textSize="15sp" 
					android:textColor="@color/black" android:layout_width="wrap_content"
					android:text="@string/bank_card_phone_yuan" android:gravity="left"
					android:textAppearance="?android:attr/textAppearanceMedium" />
			</LinearLayout>
			<LinearLayout android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:orientation="horizontal">
				<TextView android:layout_height="wrap_content"
					android:textColor="@color/black" android:layout_width="wrap_content"
					android:text="@string/bank_card_phone_bankid" android:gravity="left"
					android:textAppearance="?android:attr/textAppearanceMedium" />

				<EditText android:id="@+id/bank_card_phone_bankid"
					android:layout_height="wrap_content" android:layout_width="180dip"
					android:scrollHorizontally="true" android:autoText="false"
					android:capitalize="none" android:gravity="fill_horizontal"
					android:numeric="integer" android:textAppearance="?android:attr/textAppearanceMedium" />
			</LinearLayout>

			<LinearLayout android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:orientation="horizontal">
				<TextView android:layout_height="wrap_content"
					android:textColor="@color/black" android:layout_width="wrap_content"
					android:text="@string/bank_card_phone_phoneNum" android:gravity="left"
					android:textAppearance="?android:attr/textAppearanceMedium" />

				<EditText android:id="@+id/bank_card_phone_phone_num"
					android:layout_height="wrap_content" android:layout_width="180dip"
					android:scrollHorizontally="true" android:autoText="false"
					android:capitalize="none" android:gravity="fill_horizontal"
					android:numeric="integer" android:textAppearance="?android:attr/textAppearanceMedium" />
			</LinearLayout>

			<TextView android:layout_height="wrap_content"
				android:textColor="@color/red" android:layout_width="wrap_content" android:gravity="left"
				android:textAppearance="?android:attr/textAppearanceMedium" android:textSize="14dip" 
				android:id="@+id/textContent"/>
			<LinearLayout android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:orientation="horizontal"
				android:background="@drawable/alert_bottom_bg" android:layout_gravity="bottom">
				<Button android:id="@+id/ok" android:text="确 定"  android:background="@drawable/join_info_btn_selecter"
					android:textSize="18sp" android:layout_width="wrap_content"
					android:layout_weight="1" android:layout_height="40dp"
					android:gravity="center" android:textColor="@color/black"></Button> 
				<Button android:id="@+id/canel" android:text="取 消"  android:background="@drawable/join_info_btn_selecter"
					android:textSize="18sp" android:layout_width="wrap_content"
					android:layout_weight="1" android:layout_height="40dp" android:layout_marginLeft="10dp"
					android:gravity="center" android:textColor="@color/black"></Button>
			</LinearLayout>
		</LinearLayout>
	</LinearLayout>
</ScrollView>
