<?xml version="1.0" encoding="UTF-8"?>
	<!-- miao用户中心的布局文件 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:background="@color/white">
	<RelativeLayout android:layout_width="fill_parent"
		android:layout_height="fill_parent">
		<TextView android:layout_width="fill_parent" android:layout_height="100dp" android:visibility="gone"/>
		<LinearLayout android:orientation="vertical"
			android:paddingLeft="5dp" android:paddingRight="5dp"
			android:layout_width="fill_parent" android:layout_height="fill_parent">
			<ListView android:id="@+id/usercenter_listview_queryinfo" android:fadeScrollbars="true"
				android:divider="@drawable/litt" android:cacheColorHint="#00000000"
				android:layout_width="fill_parent" android:layout_height="fill_parent"
				 android:layout_gravity="center_horizontal" />
		</LinearLayout>
		<RelativeLayout 
			android:layout_alignParentBottom="true" android:visibility="gone"
			android:layout_width="fill_parent" android:gravity="center"
			android:layout_height="wrap_content" android:background="@drawable/buy_bot_bg"
			android:id="@+id/relativeLayout1">
			<Button android:layout_width="fill_parent"
				android:id="@+id/usercenter_more"
			    android:layout_height="wrap_content"
				android:text="@string/str_getmore"
				android:layout_centerVertical="true" />

		</RelativeLayout>
	</RelativeLayout>
</LinearLayout>