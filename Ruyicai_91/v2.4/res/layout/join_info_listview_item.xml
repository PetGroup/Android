<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="wrap_content"
	android:background="@color/white" android:paddingBottom="5dip"
	android:orientation="vertical">
	<LinearLayout android:id="@+id/LinearLayout01"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:background="@drawable/join_info_item_bg" android:orientation="vertical">
		<LinearLayout android:id="@+id/LinearLayout01"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:paddingTop="5sp">
			<TextView android:text="@+id/TextView01" android:id="@+id/join_info_item_text_name"
				android:layout_width="150dip" android:layout_height="wrap_content"
				android:textColor="@color/black" android:paddingLeft="10sp"></TextView>
			<LinearLayout android:id="@+id/LinearLayout01"
				android:layout_width="fill_parent" android:layout_height="wrap_content">
				<TextView android:text="战绩" android:id="@+id/TextView02"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:textColor="@color/black"></TextView>
				<LinearLayout android:id="@+id/join_info_item_linear_star"
					android:layout_width="fill_parent" android:layout_height="wrap_content"
					android:layout_gravity="center_vertical">
				</LinearLayout>
			</LinearLayout>
		</LinearLayout>
		<LinearLayout android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:padding="5sp"
			android:gravity="center_horizontal">
			<LinearLayout android:layout_width="wrap_content"
				android:layout_height="70sp" android:orientation="vertical"
				android:background="@drawable/join_info_item_progress"
				android:layout_marginRight="5sp" android:gravity="center_horizontal|center_vertical">
				<TextView android:text="进度" android:id="@+id/TextView02"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:textColor="@color/black" android:layout_gravity="left"
					android:paddingLeft="10sp" android:textSize="11sp"></TextView>
				<TextView android:text="" android:id="@+id/join_info_item_text_progress"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:textColor="#777777" android:textSize="35sp"></TextView>
			</LinearLayout>
			<LinearLayout android:layout_width="90sp"
				android:layout_height="70sp" android:orientation="vertical"
				android:background="@drawable/join_info_item_atm"
				android:layout_marginRight="5sp" android:gravity="center_horizontal|center_vertical">
				<TextView android:text="方案总金额" android:id="@+id/TextView02"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:textColor="#888888"></TextView>
				<TextView android:text="" android:id="@+id/join_info_item_text_all_amt"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:textColor="#E34500" android:textSize="20sp"></TextView>
			</LinearLayout>
			<LinearLayout android:layout_width="90sp"
				android:layout_height="70sp" android:orientation="vertical"
				android:background="@drawable/join_info_item_atm" android:gravity="center_horizontal|center_vertical">
				<TextView android:text="已认购金额" android:id="@+id/TextView02"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:textColor="#888888"></TextView>
				<TextView android:text="" android:id="@+id/join_info_item_text_amt"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:textColor="#E34500" android:textSize="20sp"></TextView>
			</LinearLayout>
		</LinearLayout>
	</LinearLayout>
</LinearLayout>