<?xml version="1.0" encoding="utf-8"?>
	<!--
	图标列表项
-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/account_recharge_listview_linerlayout"
	android:orientation="horizontal" android:gravity="left"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:paddingTop="15px" android:paddingBottom="15px" >
	>

	<ImageView android:id="@+id/account_recharge_listview_icon"
		android:layout_width="wrap_content" android:layout_height="wrap_content" />

	<TextView android:id="@+id/account_recharge_listview_text"
		android:textColor="@color/black" android:textAppearance="?android:attr/textAppearanceMedium"
		android:typeface="serif" android:gravity="center"
		android:layout_width="fill_parent" android:layout_height="fill_parent">
	</TextView>

</LinearLayout>
