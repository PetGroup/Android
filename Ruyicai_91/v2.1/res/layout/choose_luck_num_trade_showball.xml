<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="wrap_content"
	android:background="@color/white">

	<LinearLayout android:orientation="vertical"
		android:layout_width="fill_parent" android:layout_height="fill_parent">

		<LinearLayout android:orientation="horizontal"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:background="@drawable/buy_top" android:paddingTop="10px">

			<!-- 周黎明 7.4将Button换成ImageButton -->
			<ImageButton android:id="@+id/choose_luck_num_return"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:background="@drawable/buy_return" android:layout_marginLeft="10px" />

			<TextView android:id="@+id/choose_luck_num_gametype_title"
				android:textAppearance="?android:attr/textAppearanceMedium"
				android:typeface="serif" android:gravity="center" android:textColor="@color/black"
				android:layout_width="fill_parent" android:layout_height="fill_parent" />

		</LinearLayout>

		<LinearLayout android:orientation="vertical"
			android:id="@+id/choose_luck_num_ball_group_linearlayout"
			android:layout_width="wrap_content" android:layout_height="wrap_content">

			<LinearLayout android:orientation="horizontal"
				android:id="@+id/choose_luck_num_ball_linearlayout_01"
				android:layout_width="wrap_content" android:layout_height="30dip" />

			<LinearLayout android:orientation="horizontal"
				android:id="@+id/choose_luck_num_ball_linearlayout_02"
				android:layout_width="wrap_content" android:layout_height="30dip" />

			<LinearLayout android:orientation="horizontal"
				android:id="@+id/choose_luck_num_ball_linearlayout_03"
				android:layout_width="wrap_content" android:layout_height="30dip" />

			<LinearLayout android:orientation="horizontal"
				android:id="@+id/choose_luck_num_ball_linearlayout_04"
				android:layout_width="wrap_content" android:layout_height="30dip" />

			<LinearLayout android:orientation="horizontal"
				android:id="@+id/choose_luck_num_ball_linearlayout_05"
				android:layout_width="wrap_content" android:layout_height="30dip" />

		</LinearLayout>

		<TextView android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:textColor="#ff0000"
			android:id="@+id/choose_luck_num_show_money_total" />

		<LinearLayout android:orientation="vertical"
			android:layout_width="fill_parent" android:layout_height="wrap_content">

			<TextView android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:text="@string/dangqianzhushu"
				android:textColor="#ff0000" android:id="@+id/choose_luck_num_jizhu" />

			<RelativeLayout android:orientation="horizontal"
				android:layout_width="350px" android:layout_height="wrap_content">

				<TextView android:id="@+id/choose_luck_num_text_zhushu"
					android:layout_width="30px" android:layout_height="wrap_content"
					android:layout_alignParentLeft="true" android:layout_marginLeft="10dip"
					android:layout_marginRight="5dip" android:textSize="20px"
					android:textColor="#ff0000" />

				<ImageButton android:id="@+id/choose_luck_num_seekbar_subtract_jizhu"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:src="@drawable/subtract11" android:layout_toRightOf="@+id/choose_luck_num_text_zhushu"
					android:background="#00000000" />

				<SeekBar android:id="@+id/choose_luck_num_seek_jizhu"
					style="?android:attr/progressBarStyleHorizontal"
					android:progressDrawable="@drawable/seekbar_style" android:thumb="@drawable/thumb"
					android:max="5" android:progress="1" android:layout_width="200px"
					android:layout_height="23dip" android:paddingLeft="25dip"
					android:paddingRight="25dip" android:paddingBottom="4dip"
					android:layout_toRightOf="@+id/choose_luck_num_seekbar_subtract_jizhu" />

				<TextView android:layout_width="fill_parent"  android:gravity="center_horizontal"
					android:layout_height="wrap_content" android:layout_below="@+id/choose_luck_num_seek_jizhu"
					android:text="@string/zuiduo5zhu" android:layout_centerHorizontal="true"
					android:textColor="#ff0000" />

				<ImageButton android:id="@+id/choose_luck_num_seekbar_add_jizhu"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:src="@drawable/add11" android:layout_toRightOf="@+id/choose_luck_num_seek_jizhu"
					android:background="#00000000" android:layout_marginRight="10dip" />

			</RelativeLayout>

		</LinearLayout>

		<LinearLayout android:orientation="vertical"
			android:layout_width="wrap_content" android:layout_height="wrap_content">

			<TextView android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:text="@string/meiqibeishu"
				android:textColor="#ff0000" android:id="@+id/choose_luck_num_beishu" />

			<RelativeLayout android:orientation="horizontal"
				android:layout_width="350px" android:layout_height="wrap_content">

				<TextView android:id="@+id/choose_luck_num_text_beishu"
					android:layout_width="30px" android:layout_height="wrap_content"
					android:layout_alignParentLeft="true" android:layout_marginLeft="10dip"
					android:layout_marginRight="5dip" android:textSize="20px"
					android:textColor="#ff0000" />

				<ImageButton android:id="@+id/choose_luck_num_seekbar_subtract_beishu"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:src="@drawable/subtract11" android:layout_toRightOf="@+id/choose_luck_num_text_beishu"
					android:background="#00000000" />
				<SeekBar android:id="@+id/choose_luck_num_seek_beishu"
					style="?android:attr/progressBarStyleHorizontal"
					android:progressDrawable="@drawable/seekbar_style" android:thumb="@drawable/thumb"
					android:max="50" android:progress="1" android:layout_width="200px"
					android:layout_height="23dip" android:paddingLeft="25dip"
					android:paddingRight="25dip" android:paddingBottom="4dip"
					android:layout_toRightOf="@+id/choose_luck_num_seekbar_subtract_beishu" />

				<TextView android:layout_width="fill_parent" android:gravity="center_horizontal"
					android:layout_height="wrap_content" android:layout_below="@+id/choose_luck_num_seek_beishu"
					android:layout_centerHorizontal="true" android:text="@string/zuida50bei"
					android:textColor="#ff0000" />

				<ImageButton android:id="@+id/choose_luck_num_seekbar_add_beishu"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:src="@drawable/add11" android:layout_toRightOf="@+id/choose_luck_num_seek_beishu"
					android:background="#00000000" android:layout_marginRight="10dip" />
			</RelativeLayout>

		</LinearLayout>

		<LinearLayout android:orientation="vertical"
			android:layout_width="wrap_content" android:layout_height="wrap_content">

			<TextView android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:text="@string/zhuihaoqishu"
				android:textColor="#ff0000" android:id="@+id/choose_luck_num_qishu" />

			<!--zlm 7.14 code modify:RelativeLayout width  -->
			<RelativeLayout android:orientation="horizontal"
				android:layout_width="350px" android:layout_height="wrap_content">

				<TextView android:id="@+id/choose_luck_num_text_qishu"
					android:layout_width="30px" android:layout_height="wrap_content"
					android:layout_alignParentLeft="true" android:layout_marginLeft="10dip"
					android:layout_marginRight="5dip" android:textSize="20px"
					android:textColor="#ff0000" />

				<ImageButton android:id="@+id/choose_luck_num_seekbar_subtract_qishu"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:src="@drawable/subtract11" android:layout_toRightOf="@+id/choose_luck_num_text_qishu"
					android:background="#00000000" />
				<!-- 周黎鸣7.5代码修改：期数改为99期 -->
				<SeekBar android:id="@+id/choose_luck_num_seek_qishu"
					style="?android:attr/progressBarStyleHorizontal"
					android:progressDrawable="@drawable/seekbar_style" android:thumb="@drawable/thumb"
					android:max="99" android:progress="1" android:layout_width="200px"
					android:layout_height="23dip" android:paddingLeft="25dip"
					android:paddingRight="25dip" android:paddingBottom="4dip"
					android:layout_toRightOf="@+id/choose_luck_num_seekbar_subtract_qishu" />
				<!-- zlm 7.9 代码修改：期数改为99期 -->
				<TextView android:layout_width="fill_parent"
					android:layout_height="wrap_content" android:gravity="center_horizontal"
					android:layout_centerHorizontal="true" android:layout_below="@+id/choose_luck_num_seek_qishu"
					android:text="@string/zuiduo99qi" android:textColor="#ff0000" />

				<ImageButton android:id="@+id/choose_luck_num_seekbar_add_qishu"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:src="@drawable/add11" android:layout_toRightOf="@+id/choose_luck_num_seek_qishu"
					android:background="#00000000" android:layout_marginRight="10dip" />
			</RelativeLayout>

		</LinearLayout>

		<RelativeLayout android:orientation="horizontal"
			android:layout_width="wrap_content" android:layout_height="wrap_content">

			<ImageButton android:id="@+id/choose_luck_num_touzhu"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:background="#00000000" android:src="@drawable/imageselecter"
				android:layout_alignParentRight="true" />

		</RelativeLayout>
	</LinearLayout>

</ScrollView>
