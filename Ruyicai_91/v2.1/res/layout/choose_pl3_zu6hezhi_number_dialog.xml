	<LinearLayout android:id="@+id/buttonLayout"
		android:layout_width="fill_parent" android:paddingTop="10px"
		android:layout_height="wrap_content" android:weightSum="2"
		android:orientation="horizontal">
		<Button android:id="@+id/zu6hezhi_okButton"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:layout_weight="1" android:text="@string/confirm"></Button>
		<Button android:id="@+id/zu6hezhi_cancelButton"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:layout_weight="1" android:text="@string/cancel"></Button>
