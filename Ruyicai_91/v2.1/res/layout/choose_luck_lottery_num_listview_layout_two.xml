<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content">
  
 	 <ImageView 
		android:id="@+id/choose_luck_lottery_num_icon_id" 
		android:layout_alignParentLeft="true"
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content">
	</ImageView>
	
	<TextView 
		android:layout_width="fill_parent" 
		android:layout_height="wrap_content" 
		android:layout_toRightOf="@+id/choose_luck_lottery_num_icon_id" 
		android:textColor="@color/black"
		android:textAppearance="?android:attr/textAppearanceMedium"
		android:typeface="serif"
		android:id="@+id/choose_luck_lottery_num_zhonglei">
	</TextView>
	
	<LinearLayout android:orientation="horizontal"
                      android:id="@+id/choose_luck_num_listview_layout_button_group"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_alignParentRight="true">
	</LinearLayout>
	
</RelativeLayout>
