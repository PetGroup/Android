<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal" android:layout_width="fill_parent"
	android:layout_height="60dp" android:gravity="center_vertical">

	<TextView android:id="@+id/liuchangban_lienum"
		android:layout_weight="0.5" android:textColor="@color/black"
		android:layout_alignParentLeft="true" android:layout_width="20dp"
		android:layout_height="wrap_content" />
	<LinearLayout android:layout_width="160dp"
		android:layout_weight="4" android:layout_height="wrap_content"
		android:orientation="vertical" android:id="@+id/liuchangban_layout_team">
		<TextView android:id="@+id/liuchangban_teamrank1"
			android:layout_marginTop="5dp" android:layout_width="wrap_content"
			android:textSize="12dp" android:textColor="@color/black"
			android:layout_height="wrap_content" android:gravity="top" />
		<TextView android:text="ã€€VS" android:layout_width="wrap_content"
			android:textColor="@color/black" android:textSize="10dp"
			android:layout_height="wrap_content" />
		<TextView android:id="@+id/liuchangban_teamrank2"
			android:textColor="@color/black" android:layout_width="wrap_content"
			android:textSize="12dp" android:layout_height="wrap_content"
			android:gravity="bottom" />

	</LinearLayout>
	<RelativeLayout android:layout_width="60dp" 
		android:layout_weight="1.8" android:layout_height="wrap_content"
		android:orientation="vertical">
		<TextView android:id="@+id/liuchangban_banchang"
			android:paddingTop="5dp" android:text="@string/banchang"
			android:layout_alignParentTop="true" android:layout_width="wrap_content"
			android:textSize="12dp" android:layout_height="wrap_content"
			android:textColor="@color/blue" />

		<TextView android:id="@+id/liuchangban_quanchang"
			android:layout_below="@+id/liuchangban_banchang" android:text="@string/quanchang"
			android:layout_alignParentBottom="true" android:paddingTop="20dip"
			android:layout_width="wrap_content" android:textSize="12dp"
			android:layout_height="wrap_content" android:textColor="@color/blue" />

	</RelativeLayout>
	<LinearLayout android:id="@+id/liuchangban_ball_layout" android:paddingLeft="20dp"
		android:layout_weight="4.5" android:layout_width="200dp"
		android:layout_height="80dp" android:orientation="vertical">
		<TableLayout android:orientation="horizontal" android:paddingTop="5dp" 
			android:layout_height="wrap_content" android:layout_width="wrap_content"
			android:id="@+id/liuchangban_ball_1">

		</TableLayout>

		<TableLayout android:orientation="horizontal"
			android:layout_height="wrap_content" android:layout_width="wrap_content"
			android:id="@+id/liuchangban_ball_2">
		</TableLayout>

	</LinearLayout>
	<ImageView android:layout_weight="1.2" android:paddingRight="5dp"
		android:layout_centerVertical="true" android:layout_alignParentRight="true"
		android:layout_width="50dp" android:layout_height="wrap_content"
		android:src="@drawable/fenxi" android:id="@+id/liuchangban_fenxi" />




</LinearLayout>