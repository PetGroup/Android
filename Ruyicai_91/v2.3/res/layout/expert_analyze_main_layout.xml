<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:background="@color/list_color">
	<RelativeLayout android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:orientation="horizontal"
		android:background="@drawable/list_top" android:paddingTop="10px">
		<!-- 7.3周黎明将TextView换成ImageView -->
		<ImageView android:src="@drawable/returnselecter"
			android:layout_alignParentLeft="true" android:id="@+id/expert_img_view_return"
			android:gravity="left" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:paddingLeft="10px">
		</ImageView>
		<TextView android:text="@string/zhuanjiafenxi"
			android:textSize="20sp" android:textColor="@color/red"
			android:layout_centerHorizontal="true" android:textAppearance="?android:attr/textAppearanceMedium"
			android:typeface="serif" android:layout_width="wrap_content"
			android:layout_height="wrap_content">
		</TextView>
	</RelativeLayout>
	<ListView android:id="@+id/expert_analyze_listview_id"
		android:cacheColorHint="#00000000" android:layout_width="fill_parent"
		android:layout_height="wrap_content">
	</ListView>
</LinearLayout>
