<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/ruyichuanqing_layout_id" android:orientation="vertical"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:background="@drawable/bg">
	<LinearLayout android:orientation="vertical"
		android:layout_width="fill_parent" android:layout_height="170dip"
		android:background="@drawable/zu_list_bg" android:paddingTop="20dip"
		android:paddingBottom="20dip">
		<RelativeLayout android:id="@+id/ruyichuanqing_layout"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:layout_gravity="center_horizontal" android:paddingLeft="10dip">
			<TextView android:id="@+id/tv_ruyichuanqing_present_mode"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:text="@string/ruyichuanqing_choose_present_mode"
				android:layout_alignParentLeft="true" android:textColor="#000000" />
			<RelativeLayout android:id="@+id/ruyichuanqing_layout_check"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:layout_below="@+id/tv_ruyichuanqing_present_mode"
				android:paddingLeft="30dip" android:paddingRight="40dip">
				<CheckBox android:id="@+id/ruyichuanqing_jixuan"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:text="@string/toggle_on" android:layout_alignParentLeft="true"
					android:checked="true" android:textColor="#000000" />
				<CheckBox android:id="@+id/ruyichuanqing_zixuan"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:text="@string/toggle_off" android:textColor="#000000"
					android:layout_alignParentRight="true" />
			</RelativeLayout>
		</RelativeLayout>

		<RelativeLayout android:id="@+id/ruyichuanqing_layout_zhushu"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:layout_gravity="center_horizontal" android:paddingLeft="10dip">
			<TextView android:id="@+id/tv_ruyichuanqing_present_zhushu"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:text="@string/ruyichuanqing_choose_present_zhushu"
				android:layout_alignParentLeft="true" android:textColor="#000000" />
			<Spinner android:id="@+id/ruyichuanqing_spinner_zhushu"
				android:layout_width="100dip" android:layout_height="wrap_content"
				android:layout_below="@+id/tv_ruyichuanqing_present_zhushu"
				android:textColor="#000000" android:layout_centerHorizontal="true" />
		</RelativeLayout>
	</LinearLayout>
	<RelativeLayout android:id="@+id/ruyichuanqing_layout"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:paddingTop="20dip">
		<Button android:id="@+id/ruyichuanqing_sure"
			android:layout_width="120dip" android:layout_height="wrap_content"
			android:text="@string/ok" android:layout_centerHorizontal="true" />

	</RelativeLayout>
	<TextView android:id="@+id/tv_ruyichuanqing_tips"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:text="@string/ruyichuanqing_tips" android:gravity="center_horizontal"
		android:textColor="#000000" android:paddingLeft="20dip"
		android:paddingRight="20dip" android:paddingTop="20dip" />
</LinearLayout>
