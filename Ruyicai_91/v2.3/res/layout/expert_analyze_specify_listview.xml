<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:background="@drawable/bg">
	<RelativeLayout android:layout_width="fill_parent"
		android:id="@+id/notice_prizes_single_specific_main_relative01"
		android:layout_height="wrap_content" android:paddingLeft="10dip"
		android:background="@drawable/list_top">

		<TextView android:id="@+id/notice_prizes_single_specific_title_id"
			android:layout_centerHorizontal="true" android:textColor="@color/red"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:typeface="serif" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:text="专家荐号"
			android:textSize="20dip" android:layout_centerVertical="true" >
		</TextView>
		<!-- 周黎鸣7.3将Button换成ImageButton -->
		<ImageButton android:src="@drawable/returnselecter"
			android:id="@+id/expert_analyze_specify_return_btn"
			android:layout_alignParentLeft="true" android:background="#00000000"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:layout_centerVertical="true">
		</ImageButton>
	</RelativeLayout>
	<LinearLayout android:id="@+id/LinearLayout01"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:paddingTop="10dip">
		<ListView android:id="@+id/expert_analyze_specify_listview_id"
			android:cacheColorHint="#00000000" android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:paddingRight="5dip"
			android:layout_gravity="center_horizontal">
		</ListView>
	</LinearLayout>
</LinearLayout>
