<?xml version="1.0" encoding="utf-8"?>
<!-- 开奖号码页面 -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/notice_prizes_single_specific_main_relative01"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shouye_top"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:visibility="gone" >

        <TextView
            android:id="@+id/notice_prizes_single_specific_title_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:typeface="serif" >
        </TextView>
        <!-- 周黎鸣7.3将Button换成ImageButton -->

        <Button
            android:id="@+id/notice_prizes_single_specific_main_returnID"
            android:layout_width="96dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/notice_jc_date_selector"
            android:gravity="left|center_vertical"
            android:paddingLeft="5dp"
            android:textColor="@color/white" >
        </Button>
    </RelativeLayout>
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/notice_prizes_single_specific_main_relative01"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/notice_beijing_single_item_play"
            android:layout_width="fill_parent"
            android:layout_height="50dip"
            android:background="@drawable/buy_bot_bg"
            android:gravity="center_vertical"
            android:paddingTop="5sp"
            android:visibility="gone" >

            <Button
                android:id="@+id/buy_lq_main_btn_type"
                android:layout_width="110dip"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/football_advancebatchcode"
                android:gravity="left|center_vertical"
                android:paddingLeft="5dip"
                android:text="玩法切换"
                android:textColor="@color/black"
                android:textSize="18sp" >
            </Button>

            <Button
                android:id="@+id/notice_beijing_single_main_batch_code"
                android:layout_width="110dip"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/football_advancebatchcode"
                android:gravity="left|center_vertical"
                android:paddingLeft="5dip"
                android:textColor="@color/black"
                android:textSize="18sp" >
            </Button>
        </LinearLayout>

        <ListView
            android:id="@+id/notice_prizes_single_specific_listview"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/list_bg_white"
            android:cacheColorHint="@color/transparent"
            android:divider="#d2d2d2"
            android:dividerHeight="0dip" >
        </ListView>
    </LinearLayout>

</RelativeLayout>