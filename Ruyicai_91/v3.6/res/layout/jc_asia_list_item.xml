<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="5dip" >

        <TextView
            android:id="@+id/jc_europe_list_item_text_company"
            android:layout_width="90dip"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|center_horizontal"
            android:text="公司"
            android:textColor="@color/black"
            android:textSize="15dip" />

        <LinearLayout
            android:layout_width="90dip"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/jc_europe_list_item_text_center_win"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="初盘胜水位"
                android:textColor="@color/black"
                android:textSize="15dip" />

            <TextView
                android:id="@+id/jc_europe_list_item_text_center_leve"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="初盘亚盘"
                android:textColor="@color/black"
                android:textSize="15dip" />

            <TextView
                android:id="@+id/jc_europe_list_item_text_center_fail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="初盘负水位"
                android:textColor="@color/black"
                android:textSize="15dip" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="130dip"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/jc_europe_list_item_text_right_win"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="即时受注盘胜水位"
                android:textColor="@color/black"
                android:textSize="15dip" />

            <TextView
                android:id="@+id/jc_europe_list_item_text_right_leve"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="即时受注盘亚盘"
                android:textColor="@color/black"
                android:textSize="15dip" />

            <TextView
                android:id="@+id/jc_europe_list_item_text_right_fail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="即时受注盘负水位"
                android:textColor="@color/black"
                android:textSize="15dip" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="40dip"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone" >

            <TextView
                android:id="@+id/jc_europe_list_item_text_left_win"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="胜"
                android:textColor="@color/black"
                android:textSize="15dip" />

            <TextView
                android:id="@+id/jc_europe_list_item_text_left_leve"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="平"
                android:textColor="@color/black"
                android:textSize="15dip" />

            <TextView
                android:id="@+id/jc_europe_list_item_text_left_fail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="负"
                android:textColor="@color/black"
                android:textSize="15dip" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="2dip"
        android:background="@drawable/litt" >
    </LinearLayout>

</LinearLayout>