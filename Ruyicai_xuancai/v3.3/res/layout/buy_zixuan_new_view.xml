<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <ScrollView
            android:id="@+id/scrollView1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" android:paddingBottom="25dip">

            <LinearLayout
                android:id="@+id/linearLayout1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" >

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:id="@+id/buy_zixuan_linear_one"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/buy_zixuan_text_one"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="5dip"
                            android:text=""
                            android:textColor="@color/black"
                            android:textSize="16dip" >
                        </TextView>

                        <TableLayout
                            android:id="@+id/buy_zixuan_table_one"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="6dip"
                            android:layout_marginTop="10dip" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/buy_zixuan_linear_two"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/buy_zixuan_linear_one"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/buy_zixuan_text_two"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="5dip"
                            android:text=""
                            android:textColor="@color/black"
                            android:textSize="16dip" >
                        </TextView>

                        <TableLayout
                            android:id="@+id/buy_zixuan_table_two"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="6dip"
                            android:layout_marginTop="10dip" >
                        </TableLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/buy_zixuan_linear_third"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/buy_zixuan_linear_two"
                        android:orientation="vertical"
                        android:visibility="gone" >

                        <TextView
                            android:id="@+id/buy_zixuan_text_third"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="5dip"
                            android:text=""
                            android:textColor="@color/black"
                            android:textSize="16dip" >
                        </TextView>

                        <TableLayout
                            android:id="@+id/buy_zixuan_table_third"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="6dip"
                            android:layout_marginTop="10dip" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/buy_zixuan_linear_four"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/buy_zixuan_linear_third"
                        android:orientation="vertical"
                        android:visibility="gone" >

                        <TextView
                            android:id="@+id/buy_zixuan_text_four"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="5dip"
                            android:text=""
                            android:textColor="@color/black"
                            android:textSize="16dip" >
                        </TextView>

                        <TableLayout
                            android:id="@+id/buy_zixuan_table_four"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="6dip"
                            android:layout_marginTop="10dip" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/buy_zixuan_linear_five"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/buy_zixuan_linear_four"
                        android:orientation="vertical"
                        android:visibility="gone" >

                        <TextView
                            android:id="@+id/buy_zixuan_text_five"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="5dip"
                            android:text=""
                            android:textColor="@color/black"
                            android:textSize="16dip" >
                        </TextView>

                        <TableLayout
                            android:id="@+id/buy_zixuan_table_five"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="6dip"
                            android:layout_marginTop="10dip" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/buy_zixuan_linear_six"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/buy_zixuan_linear_five"
                        android:orientation="vertical"
                        android:visibility="gone" >

                        <TextView
                            android:id="@+id/buy_zixuan_text_six"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="5dip"
                            android:text=""
                            android:textColor="@color/black"
                            android:textSize="16dip" >
                        </TextView>

                        <TableLayout
                            android:id="@+id/buy_zixuan_table_six"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="6dip"
                            android:layout_marginTop="10dip" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/buy_zixuan_linear_seven"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/buy_zixuan_linear_six"
                        android:orientation="vertical"
                        android:visibility="gone" >

                        <TextView
                            android:id="@+id/buy_zixuan_text_seven"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="5dip"
                            android:text=""
                            android:textColor="@color/black"
                            android:textSize="16dip" >
                        </TextView>

                        <TableLayout
                            android:id="@+id/buy_zixuan_table_seven"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="6dip"
                            android:layout_marginTop="10dip" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/buy_zixuan_linear_toggle"
                        android:layout_width="fill_parent"
                        android:layout_height="60sp"
                        android:layout_below="@+id/buy_zixuan_linear_four"
                        android:gravity="right"
                        android:orientation="horizontal"
                        android:visibility="gone" >

                        <ToggleButton
                            android:id="@+id/dlt_zhuijia"
                            android:layout_width="20sp"
                            android:layout_height="20sp"
                            android:background="@drawable/dlt_zhuijia_toggle_button"
                            android:textOff=""
                            android:textOn="" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="10sp"
                            android:paddingRight="10sp"
                            android:text="@string/dlt_zhuijia_text"
                            android:textColor="#DC143C"
                            android:textSize="16dip"
                            android:textStyle="bold" />
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
        </ScrollView>

        <Button
            android:id="@+id/buy_zixuan_new_btn_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:background="@drawable/buy_main_btn"
            android:visibility="gone" />

        <Button
            android:id="@+id/buy_zixuan_new_btn_miss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/buy_miss_btn"
            android:visibility="gone" />
    </RelativeLayout>

</LinearLayout>